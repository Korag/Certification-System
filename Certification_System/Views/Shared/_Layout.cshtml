<script>
    $('body').on('mouseenter mouseleave', '.dropdown-hover', function (e) {
        let dropdown = $(e.target).closest('.dropdown-hover');
        dropdown.addClass('show');

        setTimeout(function () {
            dropdown[dropdown.is(':hover') ? 'addClass' : 'removeClass']('show');
        }, 300);
    });
</script>