@model Certification_System.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Zmiana dotychczasowego hasła";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Formularz zmiany hasła</h4>
    <hr />
    <div class="form-group">
        <div class="col-6 m-auto p-0">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-12 p-0 control-label" })
        </div>
        <div class="col-6 m-auto p-0">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "col-12 form-control" })
        </div>
        <div class="row justify-content-center">
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-6 m-auto p-0">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-12 p-0 control-label" })
        </div>
        <div class="col-6 m-auto p-0">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "col-12 form-control" })
        </div>
        <div class="row justify-content-center">
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-6 m-auto p-0">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-12 p-0 control-label" })
        </div>
        <div class="col-6 m-auto p-0">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "col-12 form-control" })
        </div>
        <div class="row justify-content-center">
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-6 m-auto p-0">
            <input type="submit" value="Zmień hasło" class="btn btn-primary" />
        </div>
    </div>
    <div class="row justify-content-center">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
