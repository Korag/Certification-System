@model Certification_System.DTOViewModels.DeleteEntityViewModel

@{
    ViewData["Title"] = "DeleteBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zmiana hasła do konta</h2>
<hr />

<div>
    <form asp-action="DeleteBranch">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="EntityIdentificator" class="form-control" hidden />
            <input asp-for="Code" class="form-control" hidden />

            <div class="form-group">
                <div>
                    <label asp-for="Password"></label>
                </div>
                <div>
                    <input type="password" asp-for="Password" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div>
                    <input type="password" asp-for="ConfirmPassword" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <button type="button" class="btn btn-danger mt-1 xs300px_JustifyContentCenter" data-toggle="modal" data-target="#modal">Usuń</button>
                <a asp-action="Login" asp-controller="Account" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do logowania</a>
            </div>

        </div>

        @await Component.InvokeAsync("Modal", new { Title = "Usuwanie elementu", Body = "Czy jesteś całkowicie przekonany, że należy usunąć wybrany element? Czynność ta jest ostateczna i nieodwracalna. Może skutkować utratą spójności prezentowanych danych.", FormSubmit = true, ButtonText = "Usuń", ButtonClass = "btn-danger" })

    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
