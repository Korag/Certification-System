@model Certification_System.DTOViewModels.DisplayBranchViewModel

@{
    ViewBag.Title = "ConfirmationOfActionOnBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zmodyfikowano obszar certyfikacji:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujący obszar certyfikacji:</h2>
}

<div class="container col-12">
    <div class="row justify-content-center mb-2">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-outline-secondary align-content-center">
                <span>@Model.Name</span>
            </label>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="AddNewBranch" asp-controller="Branches" class="btn btn-primary">Dodaj obszar certyfikacji</a>
        <a asp-action="EditBranch" asp-route-branchIdentificator="@Model.BranchIdentificator" asp-controller="Branches" class="btn btn-warning">Edytuj istniejący obszar certyfikacji</a>
        <a asp-action="DisplayAllBranches" asp-controller="Branches" class="btn btn-success">Lista wszystkich obszarów</a>
    </div>
</div>



