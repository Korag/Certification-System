@model Certification_System.DTOViewModels.DisplayBranchViewModel

@{
    ViewBag.Title = "ConfirmationOfActionOnBranch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zmodyfikowano obszar certyfikacji:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujący obszar certyfikacji:</h2>
}


<div class="container col-12">
    <div class="row justify-content-center mb-2">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
            <label class="btn btn-outline-secondary align-content-center">
                <span>@Model.Name</span>
            </label>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Dodaj obszar certyfikacji", "AddNewBranch", "Branches", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Edytuj istniejący obszar certyfikacji", "EditBranch", "Branches", new { branchIdentificator = Model.BranchIdentificator }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Lista wszystkich obszarów", "DisplayAllBranches", "Certificates", null, new { @class = "btn btn-success" })
    </div>
</div>



