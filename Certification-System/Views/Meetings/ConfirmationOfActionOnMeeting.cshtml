@model Certification_System.DTOViewModels.DisplayMeetingViewModel

@{
    ViewData["Title"] = "ConfirmationOfActionOnMeeting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano spotkanie w ramach kursu:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujące spotkanie:</h2>
}

<div class="row m-0 mt-3 mb-3">
    <a asp-action="AddNewMeeting" asp-controller="Meetings" class="btn btn-primary mt-1 xs450px_FloatLeft">Dodaj spotkanie</a>
    <a asp-action="DisplayAllMeetings" asp-controller="Meetings" class="btn btn-outline-info mt-1 xs450px_FloatRight">Powrót do listy spotkań</a>
</div>

<div class="col-12 table-responsive">
    <table id="meetingConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MeetingIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfMeeting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InstructorsCredentials)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.CourseIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.MeetingIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DateOfMeeting)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Country)
                </td>
                <td>
                    @Html.DisplayFor(model => model.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
                <td>
                    <ul>
                        @foreach (var instructor in Model.InstructorsCredentials)
                        {
                            <li>@instructor</li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="row m-0 mt-3">
    <a asp-action="MeetingDetails" asp-route-meetingIdentificator="@Model.MeetingIdentificator" asp-controller="Meetings" class="btn btn-info mt-1 mr-1">Szczegóły</a>
    <a asp-action="EditMeeting" asp-route-meetingIdentificator="@Model.MeetingIdentificator" asp-controller="Meetings" class="btn btn-warning mt-1 mr-1">Edytuj</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#meetingConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
