@model Certification_System.ViewModels.MeetingDetailsViewModel

@{
    ViewData["Title"] = "MeetingDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły spotkania</h2>
<hr />

<div>

    <h2>Informacje o spotkaniu</h2>

    <div class="mt-3 mb-3">
        @Html.ActionLink("Edytuj", "EditMeeting", "Meetings", new { meetingIdentificator = Model.MeetingIdentificator }, new { @class = "btn btn-warning" })
    </div>

    <form asp-action="MeetingDetails">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="MeetingIdentificator" class="control-label"></label>
                <input asp-for="MeetingIdentificator" class="form-control disabled" />
            </div>
            <div class="form-group">
                <label asp-for="MeetingIndexer" class="control-label"></label>
                <input asp-for="MeetingIndexer" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>
            <div class="form-group">
                <label asp-for="DateOfMeeting" class="control-label"></label>
                <input asp-for="DateOfMeeting" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <input asp-for="PostCode" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control col-12" disabled />
            </div>
            <div class="form-group">
                <label asp-for="NumberOfApartment" class="control-label"></label>
                <input asp-for="NumberOfApartment" class="form-control col-12" disabled />
            </div>

        </div>

    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Powrót do listy spotkań", "DisplayAllMeetings", "Meetings", null, new { @class = "btn btn-info" })
</div>

<h2 class="mt-4 mb-4">Instruktorzy przeprowadzający spotkanie</h2>

@if (Model.Instructors.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="instructorsList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().Phone)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Instructors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "InstructorDetails", "Certificates", null, new { @class = "btn btn-info m-1" })
                            @Html.ActionLink("Aktualizuj", "EditInstructor", "Certificates", null, new { @class = "btn btn-warning m-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak instruktorów przypisanych do spotkania</div>
}

<h2 class="mt-4 mb-4">Uczestnicy kursu</h2>

@if (Model.AllCourseParticipants.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AttendanceList)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AllCourseParticipants)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @if (Model.AttendanceList.Count != 0)
                            {
                                @if (Model.AttendanceList.Contains(item.UserIdentificator))
                                {
                                    <span class="fas fa-clipboard-check" style="font-size:34px"></span>
                                }
                                else
                                {
                                    <span class="fas fa-times" style="font-size:34px"></span>
                                }
                            }
                            else
                            {
                                <span class="fas fa-file-signature" style="font-size:34px"></span>
                            }
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "UserDetails", "Users", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-info m-1" })
                            @Html.ActionLink("Edytuj", "EditUser", "Users", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-warning m-1" })
                            @Html.ActionLink("Nadaj certyfikat", "", "Certificates", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-primary m-1" })
                            @Html.ActionLink("Nadaj stopień zawodowy", "", "Degrees", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-secondary m-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak zapisanych użytkowników</div>
}

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#instructorsList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $(document).ready(function () {

                $('#listUsers').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                    },
                }
                );
            });
        });
    </script>
}

