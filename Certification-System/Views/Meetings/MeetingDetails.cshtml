@model Certification_System.DTOViewModels.MeetingDetailsViewModel

@{
    ViewData["Title"] = "MeetingDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły spotkania</h2>
<hr />

@if (ViewBag.CheckedPresence == true)
{
    <h2 class="alert alert-info" role="alert">Dokonano sprawdzenia obecności na spotkaniu</h2>
}

<div>
    <h2>Informacje o spotkaniu</h2>

    <div class="row m-0 mt-3 mb-3">
        <a asp-action="EditMeeting" asp-route-meetingIdentificator="@Model.MeetingIdentificator" asp-controller="Meetings" class="btn btn-warning mt-1 xs350px_FloatLeft">Edytuj</a>
        <a asp-action="DisplayAllMeetings" asp-controller="Meetings" class="btn btn-outline-info mt-1 xs350px_FloatRight">Powrót do listy spotkań</a>
    </div>

    <form asp-action="MeetingDetails">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <div class="form-group">
                <label asp-for="MeetingIndexer" class="control-label"></label>
                <input asp-for="MeetingIndexer" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>

            <div class="form-group">
                <label asp-for="DateOfMeeting" class="control-label"></label>
                <input asp-for="DateOfMeeting" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <input asp-for="PostCode" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="NumberOfApartment" class="control-label"></label>
                <input asp-for="NumberOfApartment" class="form-control col-12" disabled />
            </div>

        </div>

    </form>
</div>

<h2 class="mt-4 mb-4">Instruktorzy przeprowadzający spotkanie</h2>

@if (Model.Instructors.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listInstructors" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Instructors.First().PhoneNumber)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instructor in Model.Instructors)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => instructor.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => instructor.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => instructor.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => instructor.PhoneNumber)
                        </td>
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu">
                                    <a asp-action="InstructorDetails" asp-route-instructorIdentificator="@instructor.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                    <a asp-action="EditUser" asp-route-userIdentificator="@instructor.UserIdentificator" asp-controller="Users" class="btn btn-warning w-100">Edytuj</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak instruktorów przypisanych do spotkania</div>
}

<h2 class="mt-4 mb-4">Uczestnicy kursu</h2>

<div class="mt-3 mb-3">
    <a asp-action="CheckUsersPresence" asp-route-meetingIdentificator="@Model.MeetingIdentificator" asp-controller="Meetings" class="btn btn-primary">Sprawdź obecność</a>
</div>

@if (Model.AllCourseParticipants.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AllCourseParticipants.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AttendanceList)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.AllCourseParticipants)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.LastName)
                        </td>
                        <td>
                            @if (Model.AttendanceList.Contains(user.UserIdentificator))
                            {
                                <input type="checkbox" checked data-toggle="toggle" data-on="<i class='fas fa-clipboard-check'></i> Obecny" data-off="<i class='fas fa-times'></i> Nieobecny" data-size="sm" disabled />
                            }
                            else
                            {
                                <input type="checkbox" data-toggle="toggle" data-on="<i class='fas fa-clipboard-check'></i> Obecny" data-off="<i class='fas fa-times'></i> Nieobecny" data-size="sm" disabled />
                            }

                            @*@if (Model.AttendanceList.Count != 0)
                                {
                                    @if (Model.AttendanceList.Contains(user.UserIdentificator))
                                    {
                                        <span class="fas fa-clipboard-check" style="font-size:34px"></span>
                                    }
                                    else
                                    {
                                        <span class="fas fa-times" style="font-size:34px"></span>
                                    }
                                }
                                else
                                {
                                    <span class="fas fa-file-signature" style="font-size:34px"></span>
                                }*@
                        </td>
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu">
                                    <a asp-action="UserDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                    <a asp-action="EditUser" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-warning w-100 mb-1">Edytuj</a>
                                    <a asp-action="AddNewGivenCertificate" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="GivenCertificates" class="btn btn-primary w-100 mb-1">Nadaj certyfikat</a>
                                    <a asp-action="AddNewGivenDegree" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="GivenDegrees" class="btn btn-secondary w-100">Nadaj stopień zawodowy</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak zapisanych użytkowników</div>
}

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listInstructors').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $(document).ready(function () {

                $('#listUsers').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                    },
                }
                );
            });
        });
    </script>
}

