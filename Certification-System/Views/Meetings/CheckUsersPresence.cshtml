@model Certification_System.DTOViewModels.CheckMeetingPresenceViewModel

@{
    ViewData["Title"] = "CheckUsersPresence";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sprawdzanie obecności</h2>
<hr />

<div>

    <h2>Informacje o spotkaniu</h2>

    <div class="mt-3 mb-3">
        <a asp-action="EditMeeting" asp-route-meetingIdentificator="@Model.MeetingIdentificator" asp-controller="Meetings" class="btn btn-warning">Edytuj</a>
    </div>

    <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

        <div class="form-group">
            <label asp-for="MeetingIndexer" class="control-label"></label>
            <input asp-for="MeetingIndexer" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
        </div>

        <div class="form-group">
            <label asp-for="DateOfMeeting" class="control-label"></label>
            <input asp-for="DateOfMeeting" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Country" class="control-label"></label>
            <input asp-for="Country" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <input asp-for="City" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="PostCode" class="control-label"></label>
            <input asp-for="PostCode" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control col-12" disabled />
        </div>

        <div class="form-group">
            <label asp-for="NumberOfApartment" class="control-label"></label>
            <input asp-for="NumberOfApartment" class="form-control col-12" disabled />
        </div>

    </div>
</div>

<div class="mt-3">
    <a asp-action="DisplayAllMeetings" asp-controller="Meetings" class="btn btn-info">Powrót do listy spotkań</a>
</div>

<h2 class="mt-4 mb-4">Uczestnicy kursu</h2>

<form asp-action="CheckUsersPresence">

    <input asp-for="MeetingIdentificator" class="form-control col-12" hidden />

    @if (Model.AllCourseParticipants.Count != 0)
    {
        <div class="col-12 table-responsive">
            <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AllCourseParticipants.First().Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AllCourseParticipants.First().FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AllCourseParticipants.First().LastName)
                        </th>
                        <th>
                            Obecny/a na spotkaniu ?
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{var UsersQuantitity = Model.AllCourseParticipants.Count();}
                    @for (int i = 0; i < UsersQuantitity; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.AllCourseParticipants.ElementAt(i).Email)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AllCourseParticipants.ElementAt(i).FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.AllCourseParticipants.ElementAt(i).LastName)
                            </td>
                            <td>
                                @*<div class="checkbox btn btn-outline-primary">
                                        <input asp-for="@Model.AttendanceList[i].IsPresent" />
                                        <label asp-for="@Model.AttendanceList[i].IsPresent" hidden></label>
                                        <input type="hidden" asp-for="@Model.AttendanceList[i].UserIdentificator" />
                                    </div>*@

                                <input type="checkbox" asp-for="@Model.AttendanceList[i].IsPresent" data-toggle="toggle" data-on="Obecny" data-off="Nieobecny" data-size="sm" />
                                <input type="hidden" asp-for="@Model.AttendanceList[i].UserIdentificator" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div>
            <div class="row justify-content-center">
                <input type="submit" value="Sprawdź obecność" class="btn btn-primary" />
            </div>
        </div>
    }
    else
    {
        <div class="mt-4 mb-4 alert alert-warning">Brak zapisanych użytkowników</div>
    }

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {

            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            });
        });
    </script>
}
