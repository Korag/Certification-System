@model Certification_System.DTOViewModels.AddMeetingViewModel

@{
    ViewData["Title"] = "AddNewMeetingConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano spotkanie w ramach kursu:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujące spotkanie:</h2>
}

<div class="col-12 table-responsive">
    <table id="meetingConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.SelectedCourse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MeetingIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfMeeting)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SelectedInstructors)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.SelectedCourse)
                </td>
                <td>
                    @Html.DisplayFor(model => model.MeetingIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DateOfMeeting)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Country)
                </td>
                <td>
                    @Html.DisplayFor(model => model.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
                <td>
                    <ul>
                        @foreach (var instructor in Model.SelectedInstructors)
                        {
                            <li>@instructor</li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    @Html.ActionLink("Dodaj spotkanie", "AddNewMeeting", "Meetings", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Szczegóły", "MeetingDetails", "Meetings", new { meetingIdentificator = Model.MeetingIdentificator }, new { @class = "btn btn-info" })
    @Html.ActionLink("Aktualizuj", "EditMeeting", "Certificates", new { meetingIdentificator = Model.MeetingIdentificator }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Lista wszystkich spotkań", "DisplayAllMeetings", "Meetings", null, new { @class = "btn btn-success" })
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#meetingConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
