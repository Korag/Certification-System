@model Certification_System.DTOViewModels.AddMeetingViewModel

@{
    ViewBag.Title = "AddNewMeeting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj spotkanie w ramach kursu</h2>
<hr />

<div>
    <form asp-action="AddNewMeeting">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <div class="form-group">
                <label asp-for="AvailableCourses" class="control-label"></label>
                <div>
                    <select asp-for="SelectedCourse" asp-items="@Model.AvailableCourses" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz kurs" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" class="form-control selectpicker show-tick"></select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedCourse" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div>
                    <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;"></textarea>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="DateOfStart" class="control-label"></label>
                <div>
                    <div class='input-group date' id='DateOfStart'>
                        <input asp-for="DateOfStart" type='text' class="form-control col-12" name="DateOfStart" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="DateOfStart" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="DateOfEnd" class="control-label"></label>
                <div>
                    <div class='input-group date' id='DateOfEnd'>
                        <input asp-for="DateOfEnd" type='text' class="form-control col-12" name="DateOfEnd" value="@DateTime.Now.AddHours(3).ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="DateOfEnd" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <div>
                    <input asp-for="Country" value="Polska" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <div>
                    <input asp-for="City" value="Bielsko-Biała" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <div>
                    <input asp-for="PostCode" value="43-316" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div>
                    <input asp-for="Address" value="al. Armii Krajowej" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfApartment" class="control-label"></label>
                <div>
                    <input asp-for="NumberOfApartment" value="220" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AvailableInstructors" class="control-label"></label>
                <div>
                    <select asp-for="SelectedInstructors" asp-items="@Model.AvailableInstructors" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz instruktora" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" multiple class="form-control selectpicker show-tick"></select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedInstructors" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <input type="submit" value="Utwórz" class="btn btn-primary mt-1 xs300px_JustifyContentCenter" />
                <a asp-action="DisplayAllMeetings" asp-controller="Meetings" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do listy</a>
            </div>

        </div>

    </form>
</div>

<div>
    @*jeżeli było to przekierowanie to możemy wrócić
        @Html.ActionLink("Wróć do listy spotkań szkolenia", "Index")

        jeżeli panel został ręcznie wywołany możemy z tego poziomu przejść do widoku aktywnych kursów
        @Html.ActionLink("Przeglądaj aktywne kursy", "Index")*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_SingleCalendarInputScript", "DateOfStart");}
    @{await Html.RenderPartialAsync("_SingleCalendarInputScript", "DateOfEnd");}
}
