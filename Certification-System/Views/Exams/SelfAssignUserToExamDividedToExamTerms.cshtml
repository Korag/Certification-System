@model Certification_System.DTOViewModels.SelfAssignUserToExamDividedToExamTermsViewModel

@{
    ViewData["Title"] = "SelfAssignUserToExamDividedToExamTerms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Zapisz się na egzamin</h1>
<hr />

<div>
    <form asp-action="SelfAssignUserToChosenExamPeriod">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="SelectedExam" type='text' class="form-control col-12" hidden readonly />
            <input asp-for="SelectedExamPeriod" type='text' class="form-control col-12" hidden readonly />
            <input asp-for="CourseIdentificator" type='text' class="form-control col-12" hidden readonly />

            <div class="form-group">
                <label asp-for="SelectedExam" class="control-label"></label>
                <div>
                    <select asp-for="SelectedExam" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz egzamin" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" class="form-control selectpicker show-tick" disabled>
                        <option selected>@Model.SelectedExam</option>
                    </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedExam" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedExamPeriod" class="control-label"></label>
                <div>
                    <select asp-for="SelectedExamPeriod" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz termin egzaminu" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" class="form-control selectpicker show-tick">
                        <option selected>@Model.SelectedExamPeriod</option>
                    </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedExamPeriod" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedExamTerm" class="control-label"></label>
                <div>
                    <select asp-for="SelectedExamTerm" asp-items="@Model.AvailableExamsTerms" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz turę egzaminu" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedExamTerm" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <input type="submit" value="Zapisz się" class="btn btn-primary mt-1 xs300px_JustifyContentCenter" />
                <a asp-action="WorkerCourseDetails" asp-route-courseIdentificator="@Model.CourseIdentificator" asp-controller="Courses" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do kursu</a>
            </div>

        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
