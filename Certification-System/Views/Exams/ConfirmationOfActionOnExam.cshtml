@model Certification_System.DTOViewModels.DisplayExamWithTermsViewModel

@{
    ViewData["Title"] = "ConfirmationOfActionOnExam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano egzamin:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujący egzamin:</h2>
}

<div class="row m-0 mt-3 mb-3">
    <a asp-action="AddNewExam" asp-controller="Exams" class="btn btn-primary mt-1 xs450px_FloatLeft">Dodaj nowy egzamin</a>

    <a asp-action="DisplayAllExams" asp-controller="Exams" class="btn btn-outline-info mt-1 xs450px_FloatRight">Powrót do listy egzaminów</a>
</div>

<div class="col-12 table-responsive">
    <table id="examConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.Course.CourseIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Course.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Course.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.ExamIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.OrdinalNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.DateOfStart)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.DateOfEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.DurationDays)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.DurationMinutes)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.ExamDividedToTerms)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.UsersQuantitiy)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.UsersLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Examiners)
                </th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(Model => Model.Course.CourseIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.Course.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.ExamIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.OrdinalNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.DateOfStart)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.DurationDays)
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.DurationMinutes)
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@Model.ExamDividedToTerms" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" disabled />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.UsersQuantitiy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.UsersLimit)
                    </td>
                    <td>
                        <ul>
                            @foreach (var examiner in Model.Examiners)
                            {
                                <li>@examiner.FirstName @examiner.LastName</li>
                            }
                        </ul>
                    </td>
                </tr>
        </tbody>
    </table>
</div>

<div class="row m-0 mt-3">
    <a asp-action="MarkExam" asp-route-examIdentificator="@Model.ExamIdentificator" asp-controller="Exams" class="btn btn-primary mt-1 mr-1">Oceń egzamin</a>
    <a asp-action="ExamDetails" asp-route-examIdentificator="@Model.ExamIdentificator" asp-controller="Exams" class="btn btn-info mt-1 mr-1">Szczegóły nadanego certyfikatu</a>
    <a asp-action="EditExamHub" asp-route-examIdentificator="@Model.ExamIdentificator" asp-controller="Exams" class="btn btn-warning mt-1 mr-1">Edytuj egzamin</a>
    <a asp-action="AddUsersToExam" asp-route-examIdentificator="@Model.ExamIdentificator" asp-controller="Exams" class="btn btn-light mt-1 mr-1">Przypisz użytkowników</a>
</div>

@if (Model.ExamDividedToTerms && Model.ExamTerms.Count != 0)
{
    <h2 class="mt-4 mb-4">Tury egzaminu</h2>

    <div class="mt-3 mb-3">
        <a asp-action="AddNewExamTerm" asp-route-examIdentificator="@Model.ExamIdentificator" asp-controller="Exams" class="btn btn-primary">Dodaj nową turę do egzaminu</a>
    </div>

    <div class="col-12 table-responsive">
        <table id="examTermsConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().DateOfStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().DateOfEnd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().DurationDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().DurationMinutes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().UsersQuantitiy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().UsersLimit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ExamTerms.First().Examiners)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var examTerm in Model.ExamTerms)
                {
                    <tr>  
                        <td>
                            @Html.DisplayFor(modelItem => examTerm.DateOfStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => examTerm.DurationDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => examTerm.DurationMinutes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => examTerm.UsersQuantitiy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => examTerm.UsersLimit)
                        </td>
                        <td>
                            <ul>
                                @foreach (var examiner in examTerm.Examiners)
                                {
                                    <li>@examiner.FirstName @examiner.LastName</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu">
                                    <a asp-action="AddUsersToExamTerm" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="Exams" class="btn btn-secondary w-100 mb-1">Dodaj użytkowników do tury</a>
                                    @*todo*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#examConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#examTermsConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}