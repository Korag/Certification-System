@model IEnumerable<Certification_System.DTOViewModels.DisplayExamViewModel>

@{
    ViewData["Title"] = "DisplayAllExams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (!string.IsNullOrWhiteSpace(ViewBag.message))
{
    <h2 class="alert alert-info" role="alert">@ViewBag.message</h2>
}

<h1>Lista egzaminów</h1>
<hr />

@await Component.InvokeAsync("DisplayExamDataTable", new { examViewModel = Model, tableIdentificator = "listExams", operationSet = 2 })

@section Scripts{
    @{await Html.RenderPartialAsync("_DataTableBasicScript", "listExams");}
}
