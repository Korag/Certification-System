@model IEnumerable<Certification_System.ViewModels.DisplayUsersViewModel>

@{
    ViewBag.Title = "DisplayAllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista użytkowników systemu</h2>
<hr />

<div class="m-3">
    @Html.ActionLink("Dodaj użytkownika", "AddNewUser", "Users", null, new { @class = "btn btn-primary" })
</div>

<div class="col-12 table-responsive">
    <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleWorker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleManager)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <ul>
                            @foreach (var role in item.Roles)
                            {
                                <li>@role</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var companyWorker in item.CompanyRoleWorker)
                            {
                                <li>@companyWorker</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var companyManager in item.CompanyRoleManager)
                            {
                                <li>@companyManager</li>
                            }
                        </ul>
                    </td>
                    <td>
                        @Html.ActionLink("Szczegóły", "UserDetails", "Users", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-info m-1" })
                        @Html.ActionLink("Edytuj", "EditUser", "Users", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-warning m-1" })
                        @Html.ActionLink("Nadaj certyfikat", "", "Certificates", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-primary m-1" })
                        @Html.ActionLink("Nadaj stopień zawodowy", "", "Degrees", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-secondary m-1" })
                        @Html.ActionLink("Generuj kod QR", "GenerateUserQR", "Certificates", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-dark m-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
