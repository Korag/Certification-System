@model IEnumerable<Certification_System.DTOViewModels.DisplayUserViewModel>

@{
    ViewBag.Title = "DisplayAllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista użytkowników systemu</h2>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewUser" asp-controller="Users" class="btn btn-primary">Dodaj użytkownika</a>
</div>

<div class="row justify-content-center form-group">
    <label class="control-label" id="labelWithSelect" style="margin-bottom:0px; margin-top:7px">Rola użytkownka:</label>
    <select id="select" data-style="btn-light" data-container="body" data-width="auto" data-header="Wybierz filtrowaną rolę użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-50">
        <option value="" selected>Brak filtra</option>
        <option value="ADMIN">Admin</option>
        <option value="WORKER">Worker</option>
        <option value="INSTRUCTOR">Instructor</option>
        <option value="COMPANY">Company</option>
        <option value="EXAMINER">Examiner</option>
    </select>
</div>

<div class="col-12 table-responsive">
    <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleWorker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleManager)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.LastName)
                    </td>
                    <td>
                        <ul>
                            @foreach (var role in user.Roles)
                            {
                                <li>@role</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var companyWorker in user.CompanyRoleWorker)
                            {
                                <li>@companyWorker</li>
                            }
                        </ul>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.CompanyRoleManager)
                    </td>
                    <td>
                        <div class="dropdown p-0">
                            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                            <div class="dropdown-menu">
                                @if (user.Roles.Contains("ADMIN"))
                                {<a asp-action="AccountDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("COMPANY") && user.Roles.Contains("WORKER"))
                                {<a asp-action="UserDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("COMPANY"))
                                {<a asp-action="CompanyWithAccountDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("WORKER"))
                                {<a asp-action="UserDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("INSTRUCTOR") && this.User.IsInRole("EXAMINER"))
                                {<a asp-action="InstructorExaminerDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("INSTRUCTOR"))
                                {<a asp-action="InstructorDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                else if (user.Roles.Contains("EXAMINER"))
                                {<a asp-action="ExaminerDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info w-100 mb-1">Szczegóły</a>}

                                <a asp-action="EditUser" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-warning w-100">Edytuj</a>

                                @if (user.Roles.Contains("WORKER"))
                                {
                                    <a asp-action="AddNewGivenCertificate" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Certificates" class="btn btn-primary w-100 mt-1 mb-1">Nadaj certyfikat</a>
                                    <a asp-action="AddNewGivenDegree" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Degrees" class="btn btn-secondary w-100 mb-1">Nadaj stopień zawodowy</a>
                                    <a asp-action="GenerateUserQR" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="CompetenceVerification" class="btn btn-dark w-100">Generuj kod QR</a>
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
                initComplete: function () {
                    this.api().columns(3).every(function () {
                        var column = this;

                        $('#select').on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex(
                                $(this).val()
                            );
                            column
                                .search(val ? val : '', true, false)
                                .draw();
                        });
                    });
                }
            });
        });
    </script>
}
