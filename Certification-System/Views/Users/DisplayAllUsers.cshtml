@model IEnumerable<Certification_System.DTOViewModels.DisplayUserViewModel>
@using Certification_System.DTOViewModels

@{
    ViewBag.Title = "DisplayAllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista użytkowników systemu</h2>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewUser" asp-controller="Users" class="btn btn-primary">Dodaj użytkownika</a>
</div>

<div class="row justify-content-center form-group">
    <label class="control-label" id="labelWithSelect" style="margin-bottom:0px; margin-top:7px">Rola użytkownka:</label>
    <select id="select" data-style="btn-light" data-container="body" data-width="auto" data-header="Wybierz filtrowaną rolę użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-50">
        <option value="" selected>Brak filtra</option>
        <option value="ADMIN">Admin</option>
        <option value="WORKER">Worker</option>
        <option value="INSTRUCTOR">Instructor</option>
        <option value="COMPANY">Company</option>
        <option value="EXAMINER">Examiner</option>
    </select>
</div>

@await Component.InvokeAsync("DisplayUserDataTable", new { userViewModel = Model, tableIdentificator = "listUsers", operationSet = 2 })

@section Scripts{
    @{await Html.RenderPartialAsync("_DataTableWithFilterOnColumnScript", new DataTableExtendedScriptViewModel { TableIdentificator = "listUsers", NumberOfColumn = 3 });}
}
