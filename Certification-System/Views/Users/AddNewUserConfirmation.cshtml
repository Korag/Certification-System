@model Certification_System.ViewModels.DisplayAllUserInformationViewModel

@{
    ViewBag.Title = "AddNewUserConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano użytkownika:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następującego użytkownika platformy:</h2>
}

<div class="col-12 table-responsive">
    <table id="userConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Roles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleManager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CompanyRoleWorker)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Country)
                </td>
                <td>
                    @Html.DisplayFor(model => model.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(model => model.DateOfBirth)
                </td>
                <td>
                    <ul>
                        @foreach (var role in Model.Roles)
                        {
                            <li>@role</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var company in Model.CompanyRoleManager)
                        {
                            <li>@company</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var company in Model.CompanyRoleWorker)
                        {
                            <li>@company</li>
                        }
                    </ul>
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "UserDetails", "Users", new { userIdentificator = Model.UserIdentificator }, new { @class = "btn btn-info m-1" })
                    @Html.ActionLink("Edytuj", "EditUser", "Users", new { userIdentificator = Model.UserIdentificator }, new { @class = "btn btn-warning m-1" })
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    @Html.ActionLink("Dodaj użytkownika", "AddNewUser", "Users", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Wyświetl listę użytkowników", "DisplayAllUsers", "Users", null, new { @class = "btn btn-info" })
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {

            $('#userConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}