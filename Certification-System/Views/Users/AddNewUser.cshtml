@model Certification_System.DTOViewModels.AddUserViewModel

@{
    ViewBag.Title = "AddNewUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj nowego użytkownika systemu certyfikacji</h2>
<hr />

<div>
    <form asp-action="AddNewGivenCertificate">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <div class="form-group">
                <div>
                    <label asp-for="Email"></label>
                </div>
                <div>
                    <input type="email" asp-for="Email" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="FirstName"></label>
                </div>
                <div>
                    <input asp-for="FirstName" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="LastName"></label>
                </div>
                <div>
                    <input asp-for="LastName" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="Country"></label>
                </div>
                <div>
                    <input asp-for="Country" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="City"></label>
                </div>
                <div>
                    <input asp-for="City" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="PostCode"></label>
                </div>
                <div>
                    <input asp-for="PostCode" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="Address"></label>
                </div>
                <div>
                    <input asp-for="Address" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="NumberOfApartment"></label>
                </div>
                <div>
                    <input asp-for="NumberOfApartment" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div>
                    <input asp-for="PhoneNumber" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="DateOfBirth"></label>
                </div>

                <div class='input-group date' id='DateOfBirth'>
                    <input type='text' class="form-control col-12" name="DateOfBirth" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                    <span class="input-group-addon">
                        <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                    </span>
                </div>

                <div class="row justify-content-center">
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="AvailableRoles" class="control-label"></label>
                </div>
                <div>
                    <select asp-for="SelectedRole" asp-items="@Model.AvailableRoles" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"></select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedRole" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="CompanyRoleWorker" class="control-label"></label>
                </div>
                <div>
                    <select asp-for="CompanyRoleWorker" asp-items="@Model.AvailableCompanies" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz użytkownika" multiple data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"></select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="CompanyRoleWorker" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="CompanyRoleManager" class="control-label"></label>
                </div>
                <div>
                    <select asp-for="CompanyRoleManager" asp-items="@Model.AvailableCompanies" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz użytkownika" multiple data-max-options="1" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="CompanyRoleManager" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <input type="submit" class="btn btn-primary mt-1 xs300px_JustifyContentCenter" value="Dodaj" />
                <a asp-action="DisplayAllUsers" asp-controller="Users" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do listy</a>
            </div>

        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @{await Html.RenderPartialAsync("_SingleCalendarInputScript", "DateOfBirth");}
}
