@model Certification_System.DTOViewModels.CompanyWithAccountDetailsViewModel

@{
    ViewData["Title"] = "CompanyWithAccountDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Szczegóły przedsiębiorstwa</h2>
<hr />

<div>
    <h2>Informacje o przedsiębiorstwie</h2>

    <div class="row m-0 mt-3 mb-3">
        <a asp-action="EditCompany" asp-route-companyIdentificator="@Model.CompanyIdentificator" asp-controller="Companies" class="btn btn-warning mt-1 xs350px_FloatLeft">Edytuj</a>
        <a asp-action="DisplayAllCompanies" asp-controller="Companies" class="btn btn-outline-info mt-1 xs350px_FloatRight">Powrót do listy przedsiębiorstw</a>
    </div>

    <form asp-action="CompanyDetails">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="CompanyName" class="control-label" disabled></label>
                <input asp-for="CompanyName" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <input asp-for="PostCode" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="NumberOfApartment" class="control-label"></label>
                <input asp-for="NumberOfApartment" class="form-control col-12" disabled />
            </div>

        </div>
    </form>
</div>

<div>
    <h2 class="mt-4 mb-4">Informacje o użytkowniku</h2>

    <div class="row m-0 mt-3 mb-3">
        <a asp-action="EditUser" asp-route-userIdentificator="@Model.UserAccount.UserIdentificator" asp-controller="Users" class="btn btn-warning mt-1 mr-1 xs450px_FloatLeft">Edytuj</a>
        <a asp-action="ResetAccountPassword" asp-route-userIdentificator="@Model.UserAccount.UserIdentificator" asp-controller="Account" class="btn btn-secondary mt-1 xs450px_FloatLeft">Resetuj hasło</a>

        <a asp-action="DisplayAllUsers" asp-controller="Users" class="btn btn-outline-info mt-1 xs450px_FloatRight">Powrót do listy użytkowników</a>
    </div>

    <form asp-action="AccountDetails">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <div class="form-group">
                <label asp-for="UserAccount.Email" class="control-label"></label>
                <input asp-for="UserAccount.Email" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.FirstName" class="control-label"></label>
                <input asp-for="UserAccount.FirstName" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.LastName" class="control-label"></label>
                <input asp-for="UserAccount.LastName" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.PhoneNumber" class="control-label"></label>
                <input asp-for="UserAccount.PhoneNumber" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.Country" class="control-label"></label>
                <input asp-for="UserAccount.Country" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.City" class="control-label"></label>
                <input asp-for="UserAccount.City" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.PostCode" class="control-label"></label>
                <input asp-for="UserAccount.PostCode" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.Address" class="control-label"></label>
                <input asp-for="UserAccount.Address" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.NumberOfApartment" class="control-label"></label>
                <input asp-for="UserAccount.NumberOfApartment" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UserAccount.DateOfBirth" class="control-label"></label>
                <input asp-for="UserAccount.DateOfBirth" class="form-control col-12" disabled />
            </div>

            <div class="form-group mb-0">
                <label asp-for="UserAccount.Roles" class="control-label"></label>
                <div class="row ml-0 mr-0">
                    <div>
                        @foreach (var role in Model.UserAccount.Roles)
                        {
                            <label class="btn btn-secondary align-content-center">
                                <span>@role</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<h2 class="mt-4 mb-4">Użytkownicy powiązani z przedsiębiorstwem</h2>

@if (Model.UsersConnectedToCompany.Count != 0)
{
    <h2 class="mt-4 mb-4">Użytkownicy zrzeszeni z przedsiębiorstwem</h2>
    @await Component.InvokeAsync("DisplayCrucialDataWithCompaniesRoleUserDataTable", new { userViewModel = Model.UsersConnectedToCompany, tableIdentificator = "listUsers", operationSet = 1 })
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak zrzeszonych użytkowników</div>
}

@section Scripts{
    @{await Html.RenderPartialAsync("_DataTableBasicScript", "listUsers");}
}