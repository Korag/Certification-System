@model Certification_System.DTOViewModels.AssignUsersFromCourseToExamTermViewModel

@{
    ViewData["Title"] = "AssignUsersFromCourseToExamTerm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodawanie nowych uczestników do tury egzaminu</h2>
<hr />

<form asp-action="AssignUsersFromCourseToExamTerm">
    <div>
        <h2>Informacje o egzaminie</h2>

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="Exam.ExamIdentificator" class="form-control col-12" hidden />

            <div class="form-group">
                <label asp-for="Exam.ExamIndexer" class="control-label"></label>
                <input asp-for="Exam.ExamIndexer" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Exam.Name" class="control-label"></label>
                <textarea asp-for="Exam.Name" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Exam.OrdinalNumber" class="control-label"></label>
                <input asp-for="Exam.OrdinalNumber" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Exam.Description" class="control-label"></label>
                <input asp-for="Exam.Description" class="form-control col-12" disabled />
            </div>

            <h2 class="mt-3 mb-3">Informacje o egzaminie</h2>

            <input asp-for="ExamTermIdentificator" class="form-control col-12" hidden />

            <div class="form-group">
                <label asp-for="ExamTermIndexer" class="control-label"></label>
                <input asp-for="ExamTermIndexer" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="DateOfStart" class="control-label"></label>
                <input asp-for="DateOfStart" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="DateOfEnd" class="control-label"></label>
                <input asp-for="DateOfEnd" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="DurationDays" class="control-label"></label>
                <input asp-for="DurationDays" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="DurationMinutes" class="control-label"></label>
                <input asp-for="DurationMinutes" class="form-control col-12" disabled />
            </div>


            <div class="form-group">
                <label asp-for="UsersQuantity" class="control-label"></label>
                <input asp-for="UsersQuantity" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="UsersLimit" class="control-label"></label>
                <input asp-for="UsersLimit" class="form-control col-12" disabled />
            </div>

        </div>
    </div>

    <h2 class="mt-4 mb-4">Zapisy na turę egzaminu</h2>

    <div class="form-group">
        <label asp-for="VacantSeats" class="control-label"></label>
        <input asp-for="VacantSeats" class="form-control col-12" disabled />
    </div>

    @if (Model.CourseParticipants.Count != 0)
    {
        @await Component.InvokeAsync("AssignUsersToExamTermDataTable", new { userViewModel = Model.CourseParticipants, userToAddViewModel = Model.UsersToAssignToExamTerm, tableIdentificator = "listUsers" })

        <div>
            <div class="row justify-content-center">
                <input type="submit" value="Usuń użytkowników z egzaminu" class="btn btn-danger" />
            </div>
        </div>
    }
    else
    {
        <div class="mt-4 mb-4 alert alert-warning">Brak zapisanych użytkowników</div>
    }

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_DataTableBasicScript", "listUsers");}
    @{await Html.RenderPartialAsync("_CheckBoxLimitScript", Model.VacantSeats);}
}
