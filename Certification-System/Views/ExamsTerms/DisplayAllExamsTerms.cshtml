@model IEnumerable<Certification_System.DTOViewModels.DisplayExamTermViewModel>

@{
            ViewData["Title"] = "DisplayAllExamsTerms";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }

<h1>Lista tur egzaminów</h1>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewExamTerm" asp-controller="ExamsTerms" class="btn btn-primary">Dodaj nową turę egzaminu</a>
</div>

<div class="col-12 table-responsive">
    <table id="listExamsTerms" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Exam.ExamIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exam.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exam.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exam.OrdinalNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationDays)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DurationMinutes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersQuantitiy)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UsersLimit)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var examTerm in Model)
    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.Exam.ExamIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.Exam.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.Exam.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.Exam.OrdinalNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.DateOfStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.DurationDays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.DurationMinutes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.UsersQuantitiy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => examTerm.UsersLimit)
                    </td>
                    <td>
                        <div class="dropdown p-0">
                            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                            <div class="dropdown-menu">
                                <a asp-action="EditExamTerm" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="ExamsTerms" class="btn btn-warning w-100 mb-1">Edytuj</a>
                                <a asp-action="ExamTermDetails" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="ExamsTerms" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                <a asp-action="AddUsersToExamTerm" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="ExamsTerms" class="btn btn-primary w-100 mb-1">Dodaj użytkowników do tury</a>
                                <a asp-action="MarkExamTerm" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="ExamsTerms" class="btn btn-success w-100 mb-1">Oceń egzamin dla tury</a>
                                <a asp-action="DeleteUsersFromExamTerm" asp-route-examTermIdentificator="@examTerm.ExamTermIdentificator" asp-controller="ExamsTerms" class="btn btn-light w-100">Usuń użytkowników z tury</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#listExamsTerms').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
    });
    </script>
}
