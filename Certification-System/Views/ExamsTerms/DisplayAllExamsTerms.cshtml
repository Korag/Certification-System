@model IEnumerable<Certification_System.DTOViewModels.DisplayExamTermViewModel>

@{
    ViewData["Title"] = "DisplayAllExamsTerms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista tur egzaminów</h1>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewExamTerm" asp-controller="ExamsTerms" class="btn btn-primary">Dodaj nową turę egzaminu</a>
</div>

@await Component.InvokeAsync("DisplayExamTermDataTable", new { examTermViewModel = Model, tableIdentificator = "listExamsTerms", operationSet = 1 })

@section Scripts{
    @{await Html.RenderPartialAsync("_DataTableBasicScript", "listExamsTerms");}
}
