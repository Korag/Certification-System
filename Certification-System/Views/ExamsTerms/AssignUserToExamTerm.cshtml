@model Certification_System.DTOViewModels.AssignUserToExamTermViewModel
@using Certification_System.DTOViewModels

@{
    ViewData["Title"] = "AssignUserToExamTerm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dodawanie użytkownika do tury egzaminu</h1>
<hr />

<div>
    <form asp-action="AssignUserToExamTerm">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <h2>Egzamin jest podzielony na tury</h2>

            <input asp-for="ExamIdentificator" class="form-control col-12" hidden />
            <input asp-for="UserIdentificator" class="form-control col-12" hidden />

            <div class="form-group">
                <label asp-for="SelectedUser" class="control-label"></label>
                <div>
                    <select asp-for="SelectedUser" asp-items="@Model.AvailableUsers" id="userSelect" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedUser" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedExams" class="control-label"></label>
                <div>
                    <select asp-for="SelectedExams" asp-items="@Model.AvailableExams" id="examSelect" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz egzamin" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedExams" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="SelectedExamTerm" class="control-label"></label>
                <div>
                    <select asp-for="SelectedExamTerm" asp-items="@Model.AvailableExamTerms" id="examTermSelect" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz turę egzaminu" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedExamTerm" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row justify-content-center">
                <input type="submit" value="Przypisz do tury egzaminu" class="btn btn-primary" />
            </div>

        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_AjaxCallSelectFilterScript", new AjaxCallSelectScriptViewModel { OnChangeSelect = "userSelect", FilteredSelect = "examSelect", ActionPath = "/Exams/GetUserAvailableToEnrollExamsByUserId?userIdentificator=" });}
    @{await Html.RenderPartialAsync("_AjaxCallSelectFilterScript", new AjaxCallSelectScriptViewModel { OnChangeSelect = "examSelect", FilteredSelect = "examTermSelect", ActionPath = "/ExamsTerms/GetUserAvailableToEnrollExamsTermsByExamId?examIdentificator=" });}
}

