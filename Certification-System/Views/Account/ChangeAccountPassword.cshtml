@model Certification_System.DTOViewModels.ManageViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "ChangeAccountPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zmiana hasła do konta</h2>
<hr />

<div>
    <form asp-action="ChangePassword">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="UserIdentificator" class="form-control" hidden />

            <div class="form-group">
                <div>
                    <label asp-for="OldPassword"></label>
                </div>
                <div>
                    <input type="password" asp-for="OldPassword" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="Password"></label>
                </div>
                <div>
                    <input type="password" asp-for="Password" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div>
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div>
                    <input type="password" asp-for="ConfirmPassword" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <input type="submit" class="btn btn-primary mt-1 xs300px_JustifyContentCenter" value="Zmień" />
                <a asp-action="AccountDetails" asp-controller="Users" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do danych</a>
            </div>

        </div>

    </form>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
