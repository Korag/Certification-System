@model Certification_System.DTOViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}
<h2>@ViewData["Title"].</h2>

<div class="row">
    <div class="col-12">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

            <h4>Utwórz nowe konto.</h4>
            <hr />

            <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

                <div class="form-group">
                    <div>
                        <label asp-for="Email"></label>
                    </div>
                    <div>
                        <input type="email" asp-for="Email" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="Password"></label>
                    </div>
                    <div>
                        <input type="password" asp-for="Password" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="ConfirmPassword"></label>
                    </div>
                    <div>
                        <input type="password" asp-for="ConfirmPassword" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="FirstName"></label>
                    </div>
                    <div>
                        <input asp-for="FirstName" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="LastName"></label>
                    </div>
                    <div>
                        <input asp-for="LastName" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="Country"></label>
                    </div>
                    <div>
                        <input asp-for="Country" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="City"></label>
                    </div>
                    <div>
                        <input asp-for="City" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="PostCode"></label>
                    </div>
                    <div>
                        <input asp-for="PostCode" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="Address"></label>
                    </div>
                    <div>
                        <input asp-for="Address" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="NumberOfApartment"></label>
                    </div>
                    <div>
                        <input asp-for="NumberOfApartment" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    <div>
                        <input asp-for="PhoneNumber" class="col-12 form-control" />
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div>
                        <label asp-for="DateOfBirth"></label>
                    </div>

                    <div class='input-group date' id='DateOfBirth'>
                        <input asp-for="DateOfBirth" type='text' class="form-control col-12" name="DateOfBirth" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>

                    <div class="row justify-content-center">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

                <div class="row m-0 mt-3">
                    <input type="submit" value="Zarejestruj" class="btn btn-primary mt-1 xs450px_JustifyContentCenter" />
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-outline-info mt-1 xs450px_FloatRightThenJustify">Posiadasz już konto? Zaloguj się</a>
                </div>

            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @{await Html.RenderPartialAsync("_SingleCalendarInputOnlyDateScript", "DateOfBirth");}
}
