@model Certification_System.ViewModels.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}
<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-12">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            @Html.AntiForgeryToken();
            <h4>Utwórz nowe konto.</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="Email"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input type="email" asp-for="Email" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="Password"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input type="password" asp-for="Password" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="ConfirmPassword"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input type="password" asp-for="ConfirmPassword" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="FirstName"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="FirstName" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="LastName"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="LastName" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="Country"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="Country" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="City"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="City" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="PostCode"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="PostCode" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="Address" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="NumberOfApartment"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="NumberOfApartment" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    <label asp-for="PhoneNumber"></label>
                </div>
                <div class="col-6 m-auto p-0">
                    <input asp-for="PhoneNumber" class="col-12 form-control" />
                </div>
                <div class="row justify-content-center">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-6 m-auto p-0">
                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-12 control-label p-0" })
                </div>

                <div class='input-group date col-6 m-auto p-0' id='DateOfBirth'>
                    <input type='text' class="form-control col-12" name="DateOfBirth" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                    <span class="input-group-addon">
                        <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                    </span>
                </div>

                <div class="row justify-content-center">
                    @Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row justify-content-center">
                    <input type="submit" value="Zarejestruj" class="btn btn-primary" />
                </div>
            </div>


            <div class="form-group">
                <p class="row justify-content-center">
                    <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Posiadasz już konto? Zaloguj się.</a>
                </p>
                <div class="row justify-content-center">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Scripts/moment-with-locales.js"></script>
@section Scripts {

    <script>
        $(function () {
            $('#DateOfBirth').datetimepicker({
                format: 'DD.MM.YYYY HH:mm',
                locale: moment.locale('pl', {
                    week: { dow: 1 }
                })
            });
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
