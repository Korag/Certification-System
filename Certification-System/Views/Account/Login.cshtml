@using System.Linq
@using Certification_System.Entities
@using Microsoft.AspNetCore.Identity
@model Certification_System.DTOViewModels.LoginViewModel
@inject SignInManager<CertificationPlatformUser> SignInManager
@{
    ViewData["Title"] = "Logowanie";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-12">
        <section id="loginForm">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>Zaloguj się na swoje konto.</h4>
                <hr />

                @if (!string.IsNullOrWhiteSpace(ViewBag.message))
                {
                    <h2 class="alert alert-info" role="alert">@ViewBag.message</h2>
                }

                <a asp-action="VerifyCompetenceManual" asp-controller="CompetenceVerification" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-primary mt-1 mb-1">Weryfikuj certyfikat</a>

                <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.65">

                    <div class="form-group">
                        <div>
                            <label asp-for="Email"></label>
                        </div>
                        <div>
                            <input type="email" asp-for="Email" class="col-12 form-control border border-primary" />
                        </div>
                        <div class="row justify-content-center pl-3 pr-3">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div>
                            <label asp-for="Password"></label>
                        </div>
                        <div>
                            <input type="password" asp-for="Password" class="col-12 form-control border border-primary" />
                        </div>
                        <div class="row justify-content-center pl-3 pr-3">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="checkbox col-12 p-0">
                            <div class="row pl-3">
                                <input type="checkbox" asp-for="RememberMe" class="form-control" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" />
                                <label class="control-label ml-2 mt-1">@Html.DisplayNameFor(m => m.RememberMe)</label>
                            </div>
                        </div>
                    </div>

                    <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

                    <div>
                        <div class="row justify-content-center">
                            <input type="submit" value="Zaloguj" class="btn btn-primary" />
                        </div>
                    </div>

                </div>

                <div class="mt-3">
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="btn btn-info mt-1">Nie posiadasz konta? Zarejestruj się.</a>
                    <a asp-action="ForgotPassword" class="btn btn-warning mt-1">Zapomniałeś hasła?</a>
                </div>

            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
