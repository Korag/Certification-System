@model Certification_System.ViewModels.AddCertificateToDbViewModel

@{
    ViewBag.Title = "AddNewCertificateConfirmation";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano certyfikat:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujący certyfikat:</h2>
}


<div class="col-12 table-responsive">
    <table id="certificateConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CertificateIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AvailableBranches)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.CertificateIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
                <td>
                    <ul>
                        @foreach (var branch in Model.SelectedBranches)
                        {
                            <li>@branch</li>
                        }
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    @Html.ActionLink("Dodaj certyfikat", "AddNewCertificate", "Certificates", null , new { @class = "btn btn-primary" })
    @Html.ActionLink("Szczegóły", "CertificateDetails", "Certificates", new { certificateIdentificator = Model.CertificateIdentificator }, new { @class = "btn btn-info" })
    @Html.ActionLink("Aktualizuj", "EditCertificate", "Certificates", new { certificateIdentificator = Model.CertificateIdentificator }, new { @class = "btn btn-warning" })
    @Html.ActionLink("Lista wszystkich certyfikatów", "DisplayAllCertificates", "Certificates", null , new { @class = "btn btn-success" })
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#certificateConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
