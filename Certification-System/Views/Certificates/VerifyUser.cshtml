@model Certification_System.ViewModels.VerifyUserViewModel

@{
    ViewData["Title"] = "VerifyUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Weryfikuj użytkownika</h1>
<hr />

<div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

    <form asp-action="VerifyUser">

        <div class="form-group">
            <label asp-for="UserIdentificator" class="control-label"></label>
            <input asp-for="UserIdentificator" class="form-control col-12" />
            <div class="row justify-content-center">
                <span asp-validation-for="UserIdentificator" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group mb-0">
            <div class="row justify-content-center">
                <input type="submit" value="Weryfikuj" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>

<div class="row justify-content-center">
    <div asp-validation-summary="All" class="text-danger"></div>
</div>

<div class="mt-3">
    @Html.ActionLink("Powrót do panelu weryfikacji", "VerifyUserOrSingleCertificateManual", "Certificates", null, new { @class = "btn btn-info" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}