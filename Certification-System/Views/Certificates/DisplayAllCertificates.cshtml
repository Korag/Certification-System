@model IEnumerable<Certification_System.ViewModels.DisplayListOfCertificatesViewModel>

@{
    ViewData["Title"] = "DisplayAllCertificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista certyfikatów</h2>

<p>
    <a asp-action="AddNewCertificate" asp-controller="Certificates">Dodaj nowy certyfikat</a>
</p>

<div class="col-12 table-responsive">
    <table id="certificatesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CertificateIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Depreciated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertificateIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Depreciated)
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in item.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    <td>
                        @Html.ActionLink("Szczegóły", "CertificateDetails", "Certificates", new { CertificateIdentificator = item.CertificateIdentificator }, new { @class = "btn btn-info" })
                        @Html.ActionLink("Aktualizuj", "EditCertificate", "Certificates", new { CertificateIdentificator = item.CertificateIdentificator }, new { @class = "btn btn-warning" })
                        @*@Html.ActionLink("Usuń", "MarkCertificateAsDepreciated", "Certificates", new { CertificateIdentificator = item.CertificateIndexer }, new { @class = "btn btn-danger" })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#certificatesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
                //responsive: true
            }
            );
        });
    </script>
}