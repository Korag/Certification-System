@model Certification_System.ViewModels.CertificateDetailsViewModel

@{
    ViewData["Title"] = "CertificateDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły certyfikatu</h1>
<hr />

<div>
    <h2>Informacje o certyfikacie</h2>

    <div class="mt-3 mb-3">
        @Html.ActionLink("Edytuj", "EditCertificate", new { certificateIdentificator = Model.CertificateIdentificator }, new { @class = "btn btn-warning" })
    </div>

    <form>

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="CertificateIndexer" class="control-label"></label>
                <input asp-for="CertificateIndexer" class="form-control col-12" disabled />
                <span asp-validation-for="CertificateIndexer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control col-12" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Depreciated" disabled /> @Html.DisplayNameFor(model => model.Depreciated)
                </label>
            </div>

            <div>
                <label asp-for="Branches" class="control-label col-12 p-0"></label>
                <div>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        @foreach (var branch in Model.Branches)
                        {
                            <label class="btn btn-outline-secondary m-2 active">
                                <input type="checkbox"
                                       name="SelectedBranches"
                                       value="@branch"
                                       autocomplete="off"
                                       disabled
                                       checked />
                                <span>@branch</span>
                            </label>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Powrót do listy certyfikatów", "DisplayAllCertificates", "Certificates", null, new { @class = "btn btn-info" })
</div>

@if (Model.UsersWithCertificate.Count != 0)
{
    <h2 class="mt-4 mb-4">Użytkownicy posiadający certyfikat</h2>
    <div class="col-12 table-responsive">
        <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithCertificate.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithCertificate.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithCertificate.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithCertificate.First().CompanyRoleWorker)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithCertificate.First().CompanyRoleManager)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersWithCertificate)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.LastName)
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyWorker in user.CompanyRoleWorker)
                                {
                                    <li>@companyWorker</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyManager in user.CompanyRoleManager)
                                {
                                    <li>@companyManager</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "UserDetails", "Users", new { userIdentificator = user.UserIdentificator }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak użytkowników posiadających dany certyfikat</div>
}

@if (Model.CoursesWhichEndedWithCertificate.Count != 0)
{
    <h2 class="mt-4 mb-4">Kursy, które zakończyły się przyznaniem tego typu certyfikatu</h2>
    <div class="col-12 table-responsive">
        <table id="coursesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().CourseIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().DateOfStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().DateOfEnd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().EnrolledUsersLimit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().EnrolledUsersQuantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().CourseEnded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().CourseLength)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CoursesWhichEndedWithCertificate.First().SelectedBranches)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CoursesWhichEndedWithCertificate)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrolledUsersLimit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnrolledUsersQuantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseEnded)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CourseLength)
                        </td>
                        <td>
                            <ul>
                                @foreach (var branch in item.SelectedBranches)
                                {
                                    <li>@branch</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "CourseDetails", new { CourseIdentificator = item.CourseIdentificator }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
      <div class="mt-4 mb-4 alert alert-warning">Brak kursów, które zakończyły się nadaniem takiego certyfikatu</div>
}

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#coursesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

        });
    </script>
}

