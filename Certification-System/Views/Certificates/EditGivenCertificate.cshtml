@model Certification_System.ViewModels.EditGivenCertificateViewModel

@{
    ViewData["Title"] = "EditGivenCertificate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj nadany certyfikat</h1>
<hr />

<div>
    <form asp-action="EditGivenCertificate">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <input asp-for="GivenCertificateIdentificator" class="form-control" hidden />

            <div class="form-group">
                <label asp-for="GivenCertificateIndexer" class="control-label"></label>
                <input asp-for="GivenCertificateIndexer" class="form-control col-12" />
                <span asp-validation-for="GivenCertificateIndexer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReceiptDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ReceiptDate'>
                        <input type='text' class="form-control col-12" name="ReceiptDate" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <span asp-validation-for="ReceiptDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ExpirationDate'>
                        <input type='text' class="form-control  col-12" name="ExpirationDate" value="@DateTime.Now.AddMonths(6).ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row justify-content-center">
                <input type="submit" value="Aktualizuj" class="btn btn-warning" />
            </div>

        </div>

        <div class="row justify-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Wróć do listy wszystkich nadanych certyfikatów", "DisplayAllGivenCertificates", "Users", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Wyświetl listę użytkowników", "DisplayAllUsers", "Users", null, new { @class = "btn btn-secondary" })
    @Html.ActionLink("Przejdź do szczegółów użytkownika", "UserDetails", "Users", null, new { @class = "btn btn-info" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#ReceiptDate').datetimepicker({
                format: 'DD.MM.YYYY HH:mm',
                locale: moment.locale('pl', {
                    week: { dow: 1 }
                })
            });
            $('#ExpirationDate').datetimepicker({
                format: 'DD.MM.YYYY HH:mm',
                locale: moment.locale('pl', {
                    week: { dow: 1 }
                }),
                useCurrent: false
            });
            $("#ReceiptDate").on("dp.change", function (e) {
                $('#ExpirationDate').data("DateTimePicker").minDate(e.date);
            });
            $("#ExpirationDate").on("dp.change", function (e) {
                $('#ReceiptDate').data("DateTimePicker").maxDate(e.date);
            });
        });
    </script>
}
