@section Scripts {
    <script>
        $(document).ready(function () {
        });

        $("#printButton").click(function () {
            $("#userDocument").printThis({
                importCSS: false,
                importStyle: true,
                loadCSS: ["/css/printUserDocument.css", "/lib/bootstrap/dist/css/bootstrap.min.css"],
                header: null,
                footer: null,
            });
        });
    </script>
