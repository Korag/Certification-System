@model Certification_System.DTOViewModels.AddInstructorViewModel

@{
    ViewBag.Title = "AddNewInstructorConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="alert alert-success" role="alert">Dodano następującego instruktora:</h2>

<div class="col-12 table-responsive">
    <table id="instructorConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LastName)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Phone)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Country)
                </td>
                <td>
                    @Html.DisplayFor(model => model.City)
                </td>
                <td>
                    @Html.DisplayFor(model => model.PostCode)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>
                <td>
                    @Html.DisplayFor(model => model.NumberOfApartment)
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    @Html.ActionLink("Dodaj instruktora", "AddNewInstructor", "Instructors", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Szczegóły", "InstructorDetails", "Instructors", null, new { @class = "btn btn-info" })
    @Html.ActionLink("Aktualizuj", "EditInstructor", "Instructors", null, new { @class = "btn btn-warning" })
    @Html.ActionLink("Lista wszystkich instruktorów", "DisplayAllInstructors", "Instructors", null, new { @class = "btn btn-success" })
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#instructorConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}