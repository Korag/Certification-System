@model IEnumerable<Certification_System.ViewModels.AddInstructorViewModel>

@{
    ViewBag.Title = "DisplayAllInstructors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista instruktorów</h2>
<hr/>

<div class="m-3">
    @Html.ActionLink("Dodaj nowego instruktora", "AddNewInstructor", "Instructors", null, new { @class = "btn btn-primary" })
</div>

<div class="col-12 table-responsive">
    <table id="instructorsList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfApartment)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumberOfApartment)
                    </td>
                    <td>
                        @Html.ActionLink("Szczegóły", "InstructorDetails", "Certificates", null , new { @class = "btn btn-info m-1" })
                        @Html.ActionLink("Aktualizuj", "EditInstructor", "Certificates", null , new { @class = "btn btn-warning m-1" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#instructorsList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}