@model IEnumerable<Certification_System.DTOViewModels.DisplayCourseWithUserRoleViewModel>
@using Certification_System.DTOViewModels

@{
    ViewData["Title"] = "InstructorExaminerCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Moje kursy</h1>
<hr />

<div class="row justify-content-center form-group">
    <label class="control-label" id="labelWithSelect" style="margin-bottom:0px; margin-top:7px">Status kursu:</label>
    <select id="select" data-style="btn-light" data-container="body" data-width="50%" data-size="auto" data-header="Wybierz status kursu" data-live-search="true" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" class="form-control selectpicker show-tick">
        <option value="" selected>Brak filtra</option>
        <option value="1">Archiwalne kursy</option>
        <option value="0">Aktualne kursy</option>
    </select>
</div>
<div class="row justify-content-center form-group">
    <label class="control-label" id="labelWithSelect2" style="margin-bottom:0px; margin-top:7px">Rola użytkownika:</label>
    <select id="select2" data-style="btn-light" asp-items="ViewBag.AvailableRoleFilters" data-container="body" data-width="50%" data-size="auto" data-header="Wybierz filtrowaną rolę użytkownika" title="Nie wybrano żadnego elementu" data-none-results-text="Nie znaleziono szukanej frazy" data-live-search="true" class="form-control selectpicker show-tick"> </select>
</div>

@await Component.InvokeAsync("DisplayCourseWithRolesDataTable", new { courseViewModel = Model, tableIdentificator = "listCourses" })

@section Scripts{
    @{await Html.RenderPartialAsync("_DataTableWithFilterOnColumnScript", new DataTableExtendedScriptViewModel { TableIdentificator = "listCourses", NumberOfColumn = 8 });}
    @{await Html.RenderPartialAsync("_DataTableWithFilterOnColumnScript", new DataTableExtendedScriptViewModel { TableIdentificator = "listUsers", NumberOfColumn = 3 });}
}