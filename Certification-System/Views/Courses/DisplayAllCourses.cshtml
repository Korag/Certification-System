@model IEnumerable<Certification_System.DTOViewModels.DisplayCourseViewModel>

@{
    ViewData["Title"] = "DisplayAllCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista wszystkich kursów</h1>
<hr/>

<div class="m-3">
    <a asp-action="AddNewCourse" asp-controller="Courses" class="btn btn-primary">Dodaj nowy kurs</a>
</div>

<div class="col-12 table-responsive">
    <table id="coursesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrolledUsersLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrolledUsersQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseEnded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLength)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersQuantity)
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@course.CourseEnded" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" disabled/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseLength)
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in course.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="CourseDetails" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-info m-1">Szczegóły</a>
                        <a asp-action="EditCourse" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-warning m-1">Edytuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#coursesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}