@model IEnumerable<Certification_System.DTOViewModels.DisplayCourseViewModel>

@{
    ViewData["Title"] = "DisplayAllCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista wszystkich kursów</h1>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewCourse" asp-controller="Courses" class="btn btn-primary">Dodaj nowy kurs</a>
</div>

<div class="row justify-content-center form-group">
    <label class="control-label" id="labelWithSelect" style="margin-bottom:0px; margin-top:7px">Status kursu:</label>
    <select id="select" data-style="btn-light" data-container="body" data-width="auto" data-header="Wybierz status kursu" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-50">
        <option value="" selected>Brak filtra</option>
        <option value="1">Archiwalne kursy</option>
        <option value="0">Aktualne kursy</option>
    </select>
</div>

<div class="col-12 table-responsive">
    <table id="coursesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CourseIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrolledUsersLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnrolledUsersQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseEnded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseLength)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersQuantity)
                    </td>
                    <td>
                        @if (course.CourseEnded == true)
                        {
                            <p hidden>1</p>
                        }
                        else
                        {
                            <p hidden>0</p>
                        }
                        <input type="checkbox" asp-for="@course.CourseEnded" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" disabled />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseLength)
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in course.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <div class="dropdown p-0">
                            <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                            <div class="dropdown-menu">
                                <a asp-action="CourseDetails" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                <a asp-action="EditCourse" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-warning w-100">Edytuj</a>
                            </div>
                        </div>

                        @*<a asp-action="CourseDetails" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-info m-1">Szczegóły</a>
                            <a asp-action="EditCourse" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-warning m-1">Edytuj</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#coursesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
                initComplete: function () {
                    this.api().columns(7).every(function () {
                        var column = this;

                        $('#select').on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex(
                                $(this).val()
                            );
                            column
                                .search(val ? val : '', true, false)
                                .draw();
                        });
                    });
                }
            });
        });
    </script>
}