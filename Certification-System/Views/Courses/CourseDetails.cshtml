@model Certification_System.ViewModels.CourseDetailsViewModel

@{
    ViewData["Title"] = "CourseDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły szkolenia</h1>
<hr />

<h2>Informacje o kursie</h2>

<div class="mt-3 mb-3">
    @Html.ActionLink("Edytuj", "EditCourse", "Courses", new { courseIdentificator = Model.CourseIdentificator }, new { @class = "btn btn-warning" })
</div>

<div>
    <form asp-action="CourseDetails">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="CourseIndexer" class="control-label"></label>
                <input asp-for="CourseIndexer" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>

            <div class="form-group">
                <label asp-for="DateOfStart" class="control-label"></label>
                <input asp-for="DateOfStart" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="DateOfEnd" class="control-label"></label>
                <input asp-for="DateOfEnd" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="EnrolledUsersLimit" class="control-label"></label>
                <input asp-for="EnrolledUsersLimit" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="EnrolledUsersQuantity" class="control-label"></label>
                <input asp-for="EnrolledUsersQuantity" class="form-control col-12" disabled />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CourseEnded" disabled /> @Html.DisplayNameFor(model => model.CourseEnded)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="CourseLength" class="control-label"></label>
                <input asp-for="CourseLength" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Branches" class="control-label col-12 p-0"></label>
                <div>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        @foreach (var branch in Model.Branches)
                        {
                            <label class="btn btn-outline-secondary m-2 active">
                                <input type="checkbox"
                                       name="SelectedBranches"
                                       value="@branch"
                                       autocomplete="off"
                                       disabled
                                       checked />
                                <span>@branch</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Powrót do listy kursów", "DisplayAllCourses", "Courses", null, new { @class = "btn btn-info" })
</div>


<h2 class="mt-4 mb-4">Spotkania w ramach kursu</h2>
@if (Model.Meetings.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="meetingsList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().MeetingIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().DateOfMeeting)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().PostCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().NumberOfApartment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Meetings.First().InstructorsCredentials)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Meetings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MeetingIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateOfMeeting)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumberOfApartment)
                        </td>
                        <td>
                            <ul>
                                @foreach (var instructor in item.InstructorsCredentials)
                                {
                                    <li>@instructor</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły spotkania", "MeetingDetail", "Meetings", new { meetingIdentificator = item.MeetingIdentificator }, new { @class = "btn btn-info m-1" })
                            @*@Html.ActionLink("Szczegóły instruktora", "InstructorDetail", new { instructorIdentificator = item.Instructors }, new { @class = "btn btn-secondary" })*@
                            @Html.ActionLink("Edytuj spotkanie", "EditMeeting", "Meetings", new { meetingIdentificator = item.MeetingIdentificator }, new { @class = "btn btn-warning m-1" })
                            @*@Html.ActionLink("Usuń spotkanie ze szkolenia", "DeleteMeeting", new { meetingIdentificator = item.MeetingIdentificator }) |*@
                            @Html.ActionLink("Sprawdź obecność", "CheckUsersPresence", new { meetingIdentificator = item.MeetingIdentificator }, new { @class = "btn btn-primary m-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Kurs nie posiada zdefiniowanych spotkań</div>
}

<h2 class="mt-4 mb-4">Użytkownicy zapisani na kurs</h2>
<div class="mt-3">
    @Html.ActionLink("Dodaj użytkownika do kursu", "AssignUserToCourse", new { CourseIdentificator = Model.Meetings.First() }, new { @class = "btn btn-primary" })
</div>

@if (Model.EnrolledUsers.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrolledUsers.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrolledUsers.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrolledUsers.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrolledUsers.First().CompanyRoleWorker)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnrolledUsers.First().CompanyRoleManager)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.EnrolledUsers)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyWorker in item.CompanyRoleWorker)
                                {
                                    <li>@companyWorker</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyManager in item.CompanyRoleManager)
                                {
                                    <li>@companyManager</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły użytkownika", "UserDetails", "Users", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-info m-1" }))
                            @Html.ActionLink("Usuń z kursu", "DeleteUserFromCourse", "Courses", new { userIdentificator = item.UserIdentificator }, new { @class = "btn btn-warning m-1" }))
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak użytkowników zapisanych na kurs</div>
}

@section Scripts {
    <script>
        $(document).ready(function () {

            $('#meetingsList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>


}
