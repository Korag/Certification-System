<div class="row m-0 mt-3">
    <a asp-action="CourseDetails" asp-route-courseIdentificator="@Model.CourseIdentificator" asp-controller="Courses" class="btn btn-secondary mt-1">Szczegóły</a>
    <a asp-action="EditCourse" asp-route-courseIdentificator="@Model.CourseIdentificator" asp-controller="Courses" class="btn btn-warning mt-1">Edytuj</a>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#courseConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
