@model Certification_System.DTOViewModels.RelatedCalendarsInputScriptViewModel

<script>
    $(document).ready(function () {
        $('#@Model.StartDate').datetimepicker({
            format: 'DD.MM.YYYY HH:mm',
            locale: moment.locale('pl', {
                week: { dow: 1 }
            })
        });
        $('#@Model.EndDate').datetimepicker({
            format: 'DD.MM.YYYY HH:mm',
            locale: moment.locale('pl', {
                week: { dow: 1 }
            }),
            useCurrent: false
        });

        var value = $("#@Model.StartDate").moment;
        $("#@Model.EndDate").data("DateTimePicker").minDate(value);

        $("#@Model.StartDate").on("dp.change", function (e) {
            $('#@Model.EndDate').data("DateTimePicker").minDate(e.date);
        });
        $("#@Model.EndDate").on("dp.change", function (e) {
            $('#@Model.StartDate').data("DateTimePicker").maxDate(e.date);
        });
    });
</script>