@model Certification_System.DTOViewModels.DispenseGivenCertificatesDataTableViewModel

<div class="col-12 table-responsive">
    <table id="@Model.Options.TableIdentificator" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().QuantityOfPresenceOnMeetings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().QuantityOfMeetings)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.FirstOrDefault().PercentageOfUserPresenceOnMeetings)
                </th>
                @for (int i = 0; i < Model.Users.FirstOrDefault().ExamsResults.Count(); i++)
                {
                    <th>
                        EGZ. @i - @Html.DisplayNameFor(model => model.Users.FirstOrDefault().ExamsResults.FirstOrDefault().ExamOrdinalNumber)
                    </th>
                    <th>
                        EGZ. @i - @Html.DisplayNameFor(model => model.Users.FirstOrDefault().ExamsResults.FirstOrDefault().PointsEarned)
                    </th>
                    <th>
                        EGZ. @i - @Html.DisplayNameFor(model => model.Users.FirstOrDefault().ExamsResults.FirstOrDefault().MaxAmountOfPointsToEarn)
                    </th>
                    <th>
                        EGZ. @i - @Html.DisplayNameFor(model => model.Users.FirstOrDefault().ExamsResults.FirstOrDefault().PercentageOfResult)
                    </th>
                    <th>
                        EGZ. @i - @Html.DisplayNameFor(model => model.Users.FirstOrDefault().ExamsResults.FirstOrDefault().ExamPassed)
                    </th>
                }
                <th>
                    Przyznać certyfikat za odbyty kurs ?
                </th>
            </tr>
        </thead>
        <tbody>
            @{var UsersQuantitity = Model.Users.Count();}
            @for (int i = 0; i < UsersQuantitity; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).QuantityOfPresenceOnMeetings)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).QuantityOfMeetings)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Users.ElementAt(i).PercentageOfUserPresenceOnMeetings) %
                    </td>

                    @for (int j = 0; j < Model.Users.FirstOrDefault().ExamsResults.Count(); j++)
                    {
                        <td>
                            @Html.DisplayFor(model => model.Users.ElementAt(i).ExamsResults.ElementAt(j).PointsEarned)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Users.ElementAt(i).ExamsResults.ElementAt(j).MaxAmountOfPointsToEarn)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Users.ElementAt(i).ExamsResults.ElementAt(j).PercentageOfResult) %
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Users.ElementAt(i).ExamsResults.ElementAt(j).ExamPassed)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Users.ElementAt(i).ExamsResults.ElementAt(j).ExamOrdinalNumber)
                        </td>
                    }
                    <td>
                        <input type="checkbox" asp-for="@Model.DispensedGivenCertificates[i].GivenCertificateIsEarned" data-toggle="toggle" data-on="Przyznano" data-off="Nie przyznano" data-size="sm" />
                        <input type="hidden" asp-for="@Model.DispensedGivenCertificates[i].UserIdentificator" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
