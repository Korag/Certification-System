@model Certification_System.DTOViewModels.DisplayCourseDataTableViewModel

<div class="col-12 table-responsive">
    <table id="@Model.Options.TableIdentificator" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().CourseIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().DateOfStart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().DateOfEnd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().EnrolledUsersLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().EnrolledUsersQuantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().ExamIsRequired)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().CourseEnded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().CourseLength)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Courses.FirstOrDefault().Branches)
                </th>
                @if (Model.Options.OperationSet != 0)
                {
                    <th>
                        Operacje
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.DateOfEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.EnrolledUsersQuantity)
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@course.ExamIsRequired" class="form-control col-12" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" disabled />
                    </td>
                    <td>
                        @if (course.CourseEnded == true)
                        {
                            <p hidden>1</p>
                        }
                        else
                        {
                            <p hidden>0</p>
                        }
                        <input type="checkbox" asp-for="@course.CourseEnded" data-toggle="toggle" data-on="Tak" data-off="Nie" data-size="sm" disabled />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.CourseLength)
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in course.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    @if (Model.Options.OperationSet == 1)
                    {
                        <td>
                            <a asp-action="CourseDetails" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-info m-1">Szczegóły</a>
                        </td>
                    }
                    @if (Model.Options.OperationSet == 2)
                    {
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu nohover">
                                    <a asp-action="CourseDetails" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                    <a asp-action="EditCourseHub" asp-route-courseIdentificator="@course.CourseIdentificator" asp-controller="Courses" class="btn btn-warning w-100">Edytuj</a>
                                </div>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
