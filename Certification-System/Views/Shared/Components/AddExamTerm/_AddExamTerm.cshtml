@model Certification_System.DTOViewModels.AddExamComponentViewModel

<div class="form-group">
        <label asp-for="ExamTerms[Model.Iterator].UsersLimit" class="control-label"></label>
        <div>
            <input asp-for="ExamTerms[Model.Iterator].UsersLimit" class="form-control col-6" min="1"/>
            <div class="row justify-content-center">
                <span asp-validation-for="ExamTerms[Model.Iterator].UsersLimit" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ExamTerms[Model.Iterator].SelectedExaminers" class="control-label"></label>
        <div>
            <select asp-for="ExamTerms[Model.Iterator].SelectedExaminers" asp-items="@Model.AvailableExaminers" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz kurs" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
            <div class="row justify-content-center">
                <span asp-validation-for="ExamTerms[Model.Iterator].SelectedExaminers" class="text-danger"></span>
            </div>
        </div>
    </div>



