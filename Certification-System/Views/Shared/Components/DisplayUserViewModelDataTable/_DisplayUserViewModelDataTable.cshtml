@model List<Certification_System.DTOViewModels.DisplayUserViewModel>

<div class="col-12 table-responsive">
    <table id="@ViewBag.tableIdentificator" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyRoleWorker)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyRoleManager)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.LastName)
                    </td>
                    <td>
                        <ul>
                            @foreach (var companyWorker in user.CompanyRoleWorker)
                            {
                                <li>@companyWorker</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var companyManager in user.CompanyRoleManager)
                            {
                                <li>@companyManager</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="UserDetails" asp-route-userIdentificator="@user.UserIdentificator" asp-controller="Users" class="btn btn-info">Szczegóły</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#@ViewBag.tableIdentificator').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}