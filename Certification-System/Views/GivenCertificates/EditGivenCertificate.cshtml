@model Certification_System.DTOViewModels.EditGivenCertificateViewModel
@using Certification_System.DTOViewModels

@{
    ViewData["Title"] = "EditGivenCertificate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj nadany certyfikat</h1>
<hr />

<div>
    <form asp-action="EditGivenCertificate">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="GivenCertificateIdentificator" class="form-control" hidden />

            <div class="form-group">
                <label asp-for="User" class="control-label"></label>
                <div>
                    <select asp-for="User" disabled data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick">
                        <option selected>@Model.User.FirstName @Model.User.LastName</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Certificate" class="control-label"></label>
                <div>
                    <select asp-for="Certificate" disabled data-style="btn-white" data-container="body" data-width="100%" data-size="auto"data-header="Wybierz stopień zawodowy" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick">
                        <option selected>@Model.Certificate.CertificateIndexer @Model.Certificate.Name</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Course" class="control-label"></label>
                <div>
                    <select asp-for="Course" disabled data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz stopień zawodowy" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick">
                        <option selected>@Model.Course.CourseIndexer @Model.Course.Name</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="GivenCertificateIndexer" class="control-label"></label>
                <div>
                    <input asp-for="GivenCertificateIndexer" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="GivenCertificateIndexer" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ReceiptDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ReceiptDate'>
                        <input type='text' class="form-control col-12" name="ReceiptDate" value="@Model.ReceiptDate" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="ReceiptDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ExpirationDate'>
                        <input type='text' class="form-control col-12" name="ExpirationDate" value="@Model.ExpirationDate" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <input type="submit" value="Aktualizuj" class="btn btn-warning mt-1 xs300px_JustifyContentCenter" />
                <a asp-action="DisplayAllGivenCertificates" asp-controller="GivenCertificates" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do listy</a>
            </div>

        </div>

    </form>
</div>

