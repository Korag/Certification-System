@model IEnumerable<Certification_System.DTOViewModels.DisplayGivenCertificateViewModel>

@{
    ViewData["Title"] = "DisplayAllGivenCertificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista wszystkich nadanych certyfikatów</h1>
<hr />

<div class="m-3">
    <a asp-action="AddNewGivenCertificate" asp-controller="GivenCertificates" class="btn btn-primary">Przyznaj certyfikat</a>
</div>

<div class="col-12 table-responsive">
    <table id="listGivenCertificates" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GivenCertificateIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceiptDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Certificate.CertificateIndexer) i @Html.DisplayNameFor(model => model.Certificate.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.FirstName) i @Html.DisplayNameFor(model => model.User.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course.CourseIndexer) i @Html.DisplayNameFor(model => model.Course.Name)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var givenCertificate in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => givenCertificate.GivenCertificateIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => givenCertificate.ReceiptDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => givenCertificate.ExpirationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(model => givenCertificate.Certificate.CertificateIndexer) @Html.DisplayFor(model => givenCertificate.Certificate.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(model => givenCertificate.User.FirstName) @Html.DisplayFor(model => givenCertificate.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => givenCertificate.Course.CourseIndexer) @Html.DisplayFor(model => givenCertificate.Course.Name)
                    </td>
                    <td>
                        <a asp-action="GivenCertificateDetails" asp-route-givenCertificateIdentificator="@givenCertificate.GivenCertificateIdentificator" asp-controller="GivenCertificates" class="btn btn-primary m-1">Szczegóły nadanego certyfikatu</a>
                        <a asp-action="UserDetails" asp-route-userIdentificator="@givenCertificate.User.UserIdentificator" asp-controller="Users" class="btn btn-info m-1">Szczegóły użytkownika</a>
                        <a asp-action="EditGivenCertificate" asp-route-givenCertificateIdentificator="@givenCertificate.GivenCertificateIdentificator" asp-controller="GivenCertificates" class="btn btn-warning  m-1">Edytuj certyfikat</a>
                        <a asp-action="CourseDetails" asp-route-courseIdentificator="@givenCertificate.Course.CourseIdentificator" asp-controller="Courses" class="btn btn-secondary m-1">Szczegóły kursu</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listGivenCertificates').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
