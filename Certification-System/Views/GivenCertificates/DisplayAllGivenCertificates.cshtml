@model IEnumerable<Certification_System.DTOViewModels.DisplayGivenCertificateViewModel>

@{
    ViewData["Title"] = "DisplayAllGivenCertificates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista wszystkich nadanych certyfikatów</h1>
<hr />

<div class="mt-3 mb-3">
    <a asp-action="AddNewGivenCertificate" asp-controller="GivenCertificates" class="btn btn-primary">Przyznaj nowy certyfikat</a>
</div>

@await Component.InvokeAsync("_DisplayGivenCertificateDataTable", new { examViewModel = Model, tableIdentificator = "listGivenCertificates", operationSet = 1 })

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listGivenCertificates').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
