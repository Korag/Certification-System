@model Certification_System.DTOViewModels.DegreeDetailsViewModel

@{
    ViewData["Title"] = "DegreeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły stopnia zawodowego</h1>
<hr />

<div>
    <h2>Informacje o stopniu zawodowym</h2>

    <div class="mt-3 mb-3">
        @Html.ActionLink("Edytuj", "EditDegree", "Degrees", new { degreeIdentificator = Model.DegreeIdentificator }, new { @class = "btn btn-warning" })
    </div>

    <form asp-action="DegreeDetails">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="DegreeIndexer" class="control-label"></label>
                <input asp-for="DegreeIndexer" class="form-control col-12" disabled" />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>


            <div>
                <label asp-for="Branches" class="control-label col-12 p-0"></label>
                <div>
                    <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        @foreach (var branch in Model.Branches)
                        {
                            <label class="btn btn-outline-secondary m-2 active">
                                <input type="checkbox"
                                       name="SelectedBranches"
                                       value="@branch"
                                       autocomplete="off"
                                       disabled
                                       checked />
                                <span>@branch</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Powrót do listy stopni zawodowych", "DisplayAllDegrees", "Degrees", null, new { @class = "btn btn-info" })
</div>

<h2 class="mt-4 mb-4">Certyfikaty wymagane do uzyskania stopnia zawodowego</h2>

@if (Model.RequiredCertificates.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listCertificates" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().CertificateIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Depreciated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Branches)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RequiredCertificates)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CertificateIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Depreciated)
                        </td>
                        <td>
                            <ul>
                                @foreach (var branch in item.Branches)
                                {
                                    <li>@branch</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "CertificateDetails", "Certificates", new { certificateIdentificator = item.CertificateIdentificator }, new { @class = "btn btn-info m-1" })
                            @Html.ActionLink("Aktualizuj", "EditCertificate", "Certificates", new { certificateIdentificator = item.CertificateIdentificator }, new { @class = "btn btn-warning m-1" })
                            @*@Html.ActionLink("Usuń", "MarkCertificateAsDepreciated", "Certificates", new { CertificateIdentificator = item.CertificateIndexer }, new { @class = "btn btn-danger" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Do nadania stopnia zawodowego nie jest wymagane posiadanie jakiegokolwiek certyfikatu</div>
}

<h2 class="mt-4 mb-4">Stopnie zawodowe wymagane do uzyskania stopnia zawodowego</h2>
@if (Model.RequiredDegrees.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listDegrees" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DegreeIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredDegrees)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Branches)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RequiredDegrees)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DegreeIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <ul>
                                @foreach (var certificate in item.RequiredCertificates)
                                {
                                    <li>@certificate</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var degree in item.RequiredDegrees)
                                {
                                    <li>@degree</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var branch in item.Branches)
                                {
                                    <li>@branch</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "DegreeDetails", "Degrees", new { degreeIdentificator = item.DegreeIdentificator }, new { @class = "btn btn-info m-1" })
                            @Html.ActionLink("Aktualizuj", "EditDegree", "Degrees", new { degreeIdentificator = item.DegreeIdentificator }, new { @class = "btn btn-warning m-1" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Do nadania stopnia zawodowego nie jest wymagane posiadanie jakiegokolwiek stopnia zawodowego</div>
}

<h2 class="mt-4 mb-4">Użytkownicy posiadający stopień zawodowy</h2>

@if (Model.UsersWithDegree.Count != 0)
{
    <h2 class="mt-4 mb-4">Użytkownicy posiadający certyfikat</h2>
    <div class="col-12 table-responsive">
        <table id="listUsers" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithDegree.First().Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithDegree.First().FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithDegree.First().LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithDegree.First().CompanyRoleWorker)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UsersWithDegree.First().CompanyRoleManager)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.UsersWithDegree)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => user.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => user.LastName)
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyWorker in user.CompanyRoleWorker)
                                {
                                    <li>@companyWorker</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var companyManager in user.CompanyRoleManager)
                                {
                                    <li>@companyManager</li>
                                }
                            </ul>
                        </td>
                        <td>
                            @Html.ActionLink("Szczegóły", "UserDetails", "Users", new { userIdentificator = user.UserIdentificator }, new { @class = "btn btn-info" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak użytkowników posiadających dany stopień zawodowy</div>
}


@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listUsers').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#listCertificates').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#listDegrees').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

        });
    </script>
}

