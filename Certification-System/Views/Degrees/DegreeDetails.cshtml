@model Certification_System.DTOViewModels.DegreeDetailsViewModel

@{
    ViewData["Title"] = "DegreeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Szczegóły stopnia zawodowego</h1>
<hr />

<div>
    <h2>Informacje o stopniu zawodowym</h2>

    <div class="row m-0 mt-3 mb-3">
        <a asp-action="EditDegree" asp-route-degreeIdentificator="@Model.DegreeIdentificator" asp-controller="Degrees" class="btn btn-warning mt-1 xs450px_FloatLeft">Edytuj</a>
        <a asp-action="DisplayAllDegrees" asp-controller="Degrees" class="btn btn-outline-info mt-1 xs450px_FloatRight">Powrót do listy stopni zawodowych</a>
    </div>

    <form asp-action="DegreeDetails">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <div class="form-group">
                <label asp-for="DegreeIndexer" class="control-label"></label>
                <input asp-for="DegreeIndexer" class="form-control col-12" disabled" />
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control col-12" disabled />
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;" disabled></textarea>
            </div>

            <div>
                <label asp-for="Branches" class="control-label col-12 p-0"></label>
                <div>
                    <div class="btn-group btn-group-toggle row" data-toggle="buttons">
                        @foreach (var branch in Model.Branches)
                        {
                            <label class="btn btn-outline-secondary m-2 active">
                                <input type="checkbox"
                                       name="SelectedBranches"
                                       value="@branch"
                                       autocomplete="off"
                                       disabled
                                       checked />
                                <span>@branch</span>
                            </label>
                        }
                    </div>
                </div>
            </div>

        </div>

    </form>
</div>

<h2 class="mt-4 mb-4">Certyfikaty wymagane do uzyskania stopnia zawodowego</h2>

@if (Model.RequiredCertificates.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listCertificates" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().CertificateIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Depreciated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates.First().Branches)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var certificate in Model.RequiredCertificates)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => certificate.CertificateIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => certificate.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => certificate.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => certificate.Depreciated)
                        </td>
                        <td>
                            <ul>
                                @foreach (var branch in certificate.Branches)
                                {
                                    <li>@branch</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu">
                                    <a asp-action="CertificateDetails" asp-route-certificateIdentificator="@certificate.CertificateIdentificator" asp-controller="Certificates" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                    <a asp-action="EditCertificate" asp-route-certificateIdentificator="@certificate.CertificateIdentificator" asp-controller="Certificates" class="btn btn-warning w-100">Edytuj</a>
                                    @*@Html.ActionLink("Usuń", "MarkCertificateAsDepreciated", "Certificates", new { CertificateIdentificator = item.CertificateIndexer }, new { @class = "btn btn-danger" })*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Do nadania stopnia zawodowego nie jest wymagane posiadanie jakiegokolwiek certyfikatu</div>
}

<h2 class="mt-4 mb-4">Stopnie zawodowe wymagane do uzyskania stopnia zawodowego</h2>

@if (Model.RequiredDegrees.Count != 0)
{
    <div class="col-12 table-responsive">
        <table id="listDegrees" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DegreeIndexer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredCertificates)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RequiredDegrees)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Branches)
                    </th>
                    <th>
                        Operacje
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var degree in Model.RequiredDegrees)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => degree.DegreeIndexer)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => degree.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => degree.Description)
                        </td>
                        <td>
                            <ul>
                                @foreach (var requiredCertificate in degree.RequiredCertificates)
                                {
                                    <li>@requiredCertificate</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var requiredDegree in degree.RequiredDegrees)
                                {
                                    <li>@requiredDegree</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <ul>
                                @foreach (var branch in degree.Branches)
                                {
                                    <li>@branch</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <div class="dropdown p-0">
                                <button class="btn btn-success dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Operacje</button>
                                <div class="dropdown-menu">
                                    <a asp-action="DegreeDetails" asp-route-degreeIdentificator="@degree.DegreeIdentificator" asp-controller="Degrees" class="btn btn-info w-100 mb-1">Szczegóły</a>
                                    <a asp-action="EditDegree" asp-route-degreeIdentificator="@degree.DegreeIdentificator" asp-controller="Degrees" class="btn btn-warning w-100">Edytuj</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Do nadania stopnia zawodowego nie jest wymagane posiadanie jakiegokolwiek stopnia zawodowego</div>
}

<h2 class="mt-4 mb-4">Użytkownicy posiadający stopień zawodowy</h2>

@if (Model.UsersWithDegree.Count != 0)
{
    @await Component.InvokeAsync("DisplayUserViewModelDataTable", new { usersViewModel = Model.UsersWithDegree, tableIdentificator = "listUsers" })
}
else
{
    <div class="mt-4 mb-4 alert alert-warning">Brak użytkowników posiadających dany stopień zawodowy</div>
}

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#listCertificates').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

            $('#listDegrees').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );

        });
    </script>
}

