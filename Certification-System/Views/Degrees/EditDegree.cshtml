@model Certification_System.DTOViewModels.EditDegreeViewModel

@{
    ViewData["Title"] = "EditDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj stopień zawodowy</h2>
<hr />

<div>
    <form asp-action="EditDegree">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <input asp-for="DegreeIdentificator" class="form-control" hidden />

            <div class="form-group">
                <label asp-for="DegreeIndexer" class="control-label"></label>
                <input asp-for="DegreeIndexer" class="form-control col-12" />
                <div class="row justify-content-center">
                    <span asp-validation-for="DegreeIndexer" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control col-12" />
                <div class="row justify-content-center">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;"></textarea>
                <div class="row justify-content-center">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="AvailableCertificates" class="control-label"></label>
                <div>
                    <select asp-for="SelectedCertificates" asp-items="@Model.AvailableCertificates" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz wymagane certyfikaty" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedCertificates" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AvailableDegrees" class="control-label"></label>
                <div>
                    <select asp-for="SelectedDegrees" asp-items="@Model.AvailableDegrees" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz wymagane stopnie zawodowe" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedDegrees" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AvailableBranches, htmlAttributes: new { @class = "control-label" })

                <div>
                    <select asp-for="SelectedBranches" asp-items="@Model.AvailableBranches" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz obszary certyfikacji" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
                    <div>
                        <span asp-validation-for="SelectedBranches" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-0">
                <div class="row justify-content-center">
                    <input type="submit" value="Edytuj" class="btn btn-primary" />
                </div>
            </div>

        </div>

        <div class="row justify-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

    </form>
</div>

<div class="mt-3">
    @Html.ActionLink("Przejdź do listy stopni zawodowych", "DisplayAllDegrees", "Degrees", null, new { @class = "btn btn-info" })
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
