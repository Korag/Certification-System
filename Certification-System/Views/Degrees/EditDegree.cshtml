@model Certification_System.DTOViewModels.EditDegreeViewModel

@{
    ViewData["Title"] = "EditDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edytuj stopień zawodowy</h2>
<hr />

<div>
    <form asp-action="EditDegree">

        <div class="col-md-8 col-xl-6 col-lg-6 col-sm-12 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.90">

            <input asp-for="DegreeIdentificator" class="form-control" hidden />

            <div class="form-group">
                <label asp-for="DegreeIndexer" class="control-label"></label>
                <div>
                    <input asp-for="DegreeIndexer" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="DegreeIndexer" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div>
                    <input asp-for="Name" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <div>
                    <textarea asp-for="Description" class="form-control col-12" style="width:100%; min-width:100%;"></textarea>
                    <div class="row justify-content-center">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="AvailableCertificates" class="control-label"></label>
                <div>
                    <select asp-for="SelectedCertificates" asp-items="@Model.AvailableCertificates" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz wymagane certyfikaty" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedCertificates" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AvailableDegrees" class="control-label"></label>
                <div>
                    <select asp-for="SelectedDegrees" asp-items="@Model.AvailableDegrees" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz wymagane stopnie zawodowe" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedDegrees" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AvailableBranches" class="control-label"></label>
                <div>
                    <select asp-for="SelectedBranches" asp-items="@Model.AvailableBranches" data-style="btn-white" data-container="body" data-width="100%" data-size="auto" data-header="Wybierz obszary certyfikacji" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedBranches" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row m-0 mt-3">
                <button type="button" class="btn btn-primary mt-1 xs300px_JustifyContentCenter" data-toggle="modal" data-target="#modal">Edytuj</button>
                <a asp-action="DisplayAllDegrees" asp-controller="Degrees" class="btn btn-outline-info mt-1 xs300px_FloatRight">Powrót do listy</a>
            </div>

        </div>

        @await Component.InvokeAsync("Modal", new { Title = "Edycja stopnia zawodowego", Body = "Czy na pewno chcesz zaktualizować dane wybranego stopnia zawodowego ?", FormSubmit = true, ButtonText = "Edytuj", ButtonClass = "btn-warning" })

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
