@model Certification_System.ViewModels.DisplayDegreeViewModel

@{
    ViewData["Title"] = "AddNewDegreeConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddNewDegreeConfirmation</h1>

<div class="col-12 table-responsive">
    <table id="degreeConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DegreeIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredCertificates)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDegrees)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.DegreeIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Description)
                </td>
                <td>
                    <ul>
                        @foreach (var certificate in Model.RequiredCertificates)
                        {
                            <li>@certificate</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var degree in Model.RequiredDegrees)
                        {
                            <li>@degree</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul>
                        @foreach (var branch in Model.Branches)
                        {
                            <li>@branch</li>
                        }
                    </ul>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        </tbody>
    </table>
</div>

<p>
    <a asp-action="AddNewDegree" asp-controller="Degrees">Dodaj kolejny stopień zawodowy</a>
</p>


@section Scripts{
    <script>
    $(document).ready(function () {

        $('#degreeConfirmation').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
            },
        }
        );
    });
    </script>
}