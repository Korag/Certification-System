@model Certification_System.DTOViewModels.AddGivenDegreeViewModel

@{
    ViewData["Title"] = "AddNewGivenDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Przyznaj stopień zawodowy użytkownikowi</h1>
<hr />

<div>
    <form asp-action="AddNewGivenDegree">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="AvailableUsers" class="control-label"></label>
                <div>
                    <select asp-for="SelectedUser" asp-items="@Model.AvailableUsers" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz użytkownika" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedUser" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="AvailableDegrees" class="control-label"></label>
                <div>
                    <select asp-for="SelectedDegree" asp-items="@Model.AvailableDegrees" data-style="btn-white" data-container="body" data-width="auto" data-header="Wybierz stopień zawodowy" data-live-search="true" title="Nie wybrano żadnego elementu" class="form-control selectpicker show-tick w-100"> </select>
                    <div class="row justify-content-center">
                        <span asp-validation-for="SelectedDegree" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="GivenDegreeIndexer" class="control-label"></label>
                <div>
                    <input asp-for="GivenDegreeIndexer" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="GivenDegreeIndexer" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ReceiptDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ReceiptDate'>
                        <input type='text' class="form-control col-12" name="ReceiptDate" value="@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="ReceiptDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="ExpirationDate" class="control-label"></label>
                <div>
                    <div class='input-group date' id='ExpirationDate'>
                        <input type='text' class="form-control col-12" name="ExpirationDate" value="@DateTime.Now.AddMonths(6).ToShortDateString() @DateTime.Now.ToShortTimeString()" />
                        <span class="input-group-addon">
                            <span class="fa fa-calendar pl-1 pt-0.5" style="font-size:34px"></span>
                        </span>
                    </div>
                    <div class="row justify-content-center">
                        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row justify-content-center">
                <input type="submit" value="Nadaj stopień zawodowy" class="btn btn-primary" />
            </div>

        </div>

    </form>
</div>

<div class="mt-3">
    <a asp-action="DisplayAllGivenDegrees" asp-controller="Degrees" class="btn btn-info">Wyświetl listę nadanych stopni zawodowych</a>
    <a asp-action="DisplayAllUsers" asp-controller="Users" class="btn btn-secondary">Wyświetl listę użytkowników</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(function () {
            $('#ReceiptDate').datetimepicker({
                format: 'DD.MM.YYYY HH:mm',
                locale: moment.locale('pl', {
                    week: { dow: 1 }
                })
            });
            $('#ExpirationDate').datetimepicker({
                format: 'DD.MM.YYYY HH:mm',
                locale: moment.locale('pl', {
                    week: { dow: 1 }
                }),
                useCurrent: false
            });
            $("#ReceiptDate").on("dp.change", function (e) {
                $('#ExpirationDate').data("DateTimePicker").minDate(e.date);
            });
            $("#ExpirationDate").on("dp.change", function (e) {
                $('#ReceiptDate').data("DateTimePicker").maxDate(e.date);
            });
        });
    </script>
}