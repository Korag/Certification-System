@model IEnumerable<Certification_System.DTOViewModels.DisplayDegreeViewModel>

@{
    ViewData["Title"] = "DisplayAllDegrees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista wszystkich stopni zawodowych</h2>

<div class="m-3">
    <a asp-action="AddNewDegree" asp-controller="Degrees" class="btn btn-primary">Dodaj kolejny stopień zawodowy</a>
</div>

<div class="col-12 table-responsive">
    <table id="degreesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DegreeIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredCertificates)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDegrees)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var degree in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => degree.DegreeIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => degree.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => degree.Description)
                    </td>
                    <td>
                        <ul>
                            @foreach (var requiredCertificate in degree.RequiredCertificates)
                            {
                                <li>@requiredCertificate</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var requiredDegree in degree.RequiredDegrees)
                            {
                                <li>@requiredDegree</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in degree.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="DegreeDetails" asp-route-degreeIdentificator="@degree.DegreeIdentificator" asp-controller="Degrees" class="btn btn-info m-1">Szczegóły</a>
                        <a asp-action="EditDegree" asp-route-degreeIdentificator="@degree.DegreeIdentificator" asp-controller="Degrees" class="btn btn-warning m-1">Aktualizuj</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#degreesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
                //responsive: true
            }
            );
        });
    </script>
}
