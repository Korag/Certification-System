@model IEnumerable<Certification_System.ViewModels.DisplayDegreeViewModel>

@{
    ViewData["Title"] = "DisplayAllDegrees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista wszystkich stopni zawodowych</h2>

<p>
    <a asp-action="AddNewDegree" asp-controller="Degrees">Dodaj kolejny stopień zawodowy</a>
</p>

<div class="col-12 table-responsive">
    <table id="degreesList" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DegreeIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredCertificates)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredDegrees)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branches)
                </th>
                <th>
                    Operacje
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegreeIndexer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <ul>
                            @foreach (var certificate in item.RequiredCertificates)
                            {
                                <li>@certificate</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var degree in item.RequiredDegrees)
                            {
                                <li>@degree</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <ul>
                            @foreach (var branch in item.Branches)
                            {
                                <li>@branch</li>
                            }
                        </ul>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#degreesList').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
                //responsive: true
            }
            );
        });
    </script>
}