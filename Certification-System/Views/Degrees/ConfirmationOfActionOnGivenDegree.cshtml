@model Certification_System.DTOViewModels.DisplayGivenDegreeViewModel

@{
    ViewData["Title"] = "ConfirmationOfActionOnGivenDegree";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano nadany stopień zawodowy:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Przyznano następujący stopień zawodowy:</h2>
}

<div class="col-12 table-responsive">
    <table id="givenDegreeConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GivenDegreeIndexer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceiptDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpirationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Degree.DegreeIndexer) i @Html.DisplayNameFor(model => model.Degree.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.FirstName) i @Html.DisplayNameFor(model => model.User.LastName)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.GivenDegreeIndexer)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ReceiptDate)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ExpirationDate)
                </td>
                <td>
                    @Html.DisplayFor(model => model.Degree.DegreeIndexer) @Html.DisplayFor(model => model.Degree.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="mt-3">
    <a asp-action="AddNewGivenDegree" asp-controller="Degrees" class="btn btn-primary">Przyznaj nowy stopień zawodowy</a>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#givenDegreeConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}
