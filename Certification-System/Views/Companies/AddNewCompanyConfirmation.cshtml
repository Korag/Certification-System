@model Certification_System.ViewModels.AddCompanyViewModel

@{
    ViewBag.Title = "AddNewCompanyConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (ViewBag.TypeOfAction == "Update")
{
    <h2 class="alert alert-info" role="alert">Zaktualizowano wpis dotyczący przedsiębiorstwa:</h2>
}
else
{
    <h2 class="alert alert-success" role="alert">Dodano następujący wpis dotyczący przedsiębiorstwa:</h2>
}

<div class="col-12 table-responsive">
    <table id="companyConfirmation" class="table table-striped table-bordered display" style="width: 100%;" role="grid">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PostCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumberOfApartment)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.City)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PostCode)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.NumberOfApartment)
                    </td>
                </tr>
            </tbody>
        </table>
</div>

<p>
    @Html.ActionLink("Utwórz nowy wpis dotyczący przedsiębiorstwa", "AddNewCompany", "Companies")
    @Html.ActionLink("Przeglądaj przedsiębiorstwa", "DisplayAllCompanies", "Companies")
</p>

@section Scripts{
    <script>
        $(document).ready(function () {

            $('#companyConfirmation').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/Polish.json"
                },
            }
            );
        });
    </script>
}