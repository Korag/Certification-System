@model Certification_System.DTOViewModels.EditCompanyViewModel

@{
    ViewData["Title"] = "EditCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edytuj dane przedsiębiorstwa</h1>
<hr />

<div>
    <form asp-action="AddNewGivenCertificate">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <div>
                    <input asp-for="CompanyName" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <div>
                    <input asp-for="Email" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <div>
                    <input asp-for="Phone" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <div>
                    <input asp-for="Country" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <div>
                    <input asp-for="City" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="PostCode" class="control-label"></label>
                <div>
                    <input asp-for="PostCode" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <div>
                    <input asp-for="Address" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfApartment" class="control-label"></label>
                <div>
                    <input asp-for="NumberOfApartment" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div asp-validation-summary="ModelOnly" class="row justify-content-center alert alert-danger validation-model"></div>

            <div class="row justify-content-center">
                <input type="submit" value="Aktualizuj" class="btn btn-primary" />
            </div>

        </div>

    </form>
</div>

<div class="mt-3">
    <a asp-action="DisplayAllCompanies" asp-controller="Companies" class="btn btn-info">Powrót do listy przedsiębiorstw</a>
</div>
