@model Certification_System.DTOViewModels.AddCompanyViewModel

@{
    ViewBag.Title = "AddNewCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dodaj nowe przedsiębiorstwo</h2>
<hr />

<div>
    <form asp-action="AddNewCompany">

        <div class="col-md-6 col-xl-6 col-sm-8 col-xs-10 m-auto p-3 shadow p-3 mb-5 bg-light rounded border border-primary rounded-bottom" style="opacity:0.80">

            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control col-12" />
                <div class="row justify-content-center">
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
            </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="PostCode" class="control-label"></label>
                    <input asp-for="PostCode" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="PostCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfApartment" class="control-label"></label>
                    <input asp-for="NumberOfApartment" class="form-control col-12" />
                    <div class="row justify-content-center">
                        <span asp-validation-for="NumberOfApartment" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-0">
                    <div class="row justify-content-center">
                        <input type="submit" value="Dodaj" class="btn btn-primary" />
                    </div>
                </div>

            </div>

        <div class="row justify-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

    </form>

</div>

<div class="mt-3">
    @Html.ActionLink("Przejdź do listy przedsiębiorstw", "DisplayAllCompanies", "Companies", null, new { @class = "btn btn-info" })
</div>
